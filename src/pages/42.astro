                     <div class="absolute -right-20 -top-20 w-[500px] h-[500px] bg-red-600/20 blur-[100px] rounded-full"></div>
                 </div>

                 <!-- Content Container -->
                 <div class="relative z-10 p-4 md:p-8">
                    
                    <!-- Top Row: Profile & Info -->
                    <div class="flex flex-col md:flex-row gap-6 md:gap-10 mb-8">
                        <!-- Profile Pic -->
                        <div class="flex-shrink-0 relative">
                             <div class="w-32 h-32 md:w-36 md:h-36 rounded-full border-4 border-[#1e1e1e] overflow-hidden shadow-2xl relative z-10 bg-black">
                                <img src="/profile.png" alt="jdelorme" class="w-full h-full object-cover filter contrast-110">
                             </div>
                             <!-- Coalition Badge (Triangle) -->
                             <div class="absolute -bottom-2 -right-2 md:right-0 bg-[#1e1e1e] rounded-full p-1 z-20">
                                 <div class="w-10 h-10 bg-gradient-to-br from-red-500 to-red-700 clip-path-triangle flex items-center justify-center shadow-lg transform rotate-0">
