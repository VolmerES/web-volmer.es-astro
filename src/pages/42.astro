---
import Layout from '../layouts/Layout.astro';

const projects = [
    {
        title: "Libft",
        description: "Mi primera librería en C. Una colección de funciones estándar y utilidades esenciales que he utilizado en todo mi cursus.",
        image: "/42-project-badges/covers/cover-libft-bonus.png",
        tags: ["C", "Algorithms", "Basics"],
        tech: ["Make", "Clang"],
        link: "https://github.com/VolmerES/libft",
        status: "125/100"
    },
    {
        title: "ft_printf",
        description: "Recreación de la función printf de C. Manejo de argumentos variables y formateo de cadenas.",
        image: "/42-project-badges/covers/cover-ft_printf.png",
        tags: ["C", "Variadic Functions"],
        tech: ["C", "Makefile"],
        link: "https://github.com/VolmerES/ft_printf",
        status: "100/100"
    },
    {
        title: "get_next_line",
        description: "Función que lee una línea de un file descriptor. Gestión de memoria estática y buffers.",
        image: "/42-project-badges/covers/cover-get_next_line-bonus.png",
        tags: ["C", "File I/O", "Memory"],
        tech: ["C", "Buffers"],
        link: "https://github.com/VolmerES/get_next_line",
        status: "125/100"
    },
    {
        title: "Born2BeRoot",
        description: "Configuración de un servidor virtual seguro usando Debian. Particionado LVM, SSH, UFW y políticas de contraseñas estrictas.",
        image: "/42-project-badges/covers/cover-born2beroot-bonus.png",
        tags: ["SysAdmin", "Virtualization", "Security"],
        tech: ["VirtualBox", "Debian", "Bash"],
        link: "#",
        status: "125/100"
    },
    {
        title: "So Long",
        description: "Un pequeño juego 2D usando MiniLibX. Gráficos básicos, manejo de eventos y gameplay fluido.",
        image: "/42-project-badges/covers/cover-so_long-bonus.png",
        tags: ["Graphics", "Game Dev", "2D"],
        tech: ["C", "MiniLibX"],
        link: "https://github.com/VolmerES/So_Long",
        status: "110/100"
    },
    {
        title: "pipex",
        description: "Simulación del funcionamiento de los pipes de UNIX en C. Redirección de entrada/salida y ejecución de comandos.",
        image: "/42-project-badges/covers/cover-pipex.png",
        tags: ["UNIX", "Pipes", "Processes"],
        tech: ["C", "Fork", "Exec"],
        link: "https://github.com/VolmerES/pipex",
        status: "100/100"
    },
    {
        title: "Push Swap",
        description: "Algoritmo de ordenamiento altamente eficiente usando dos pilas y un conjunto limitado de instrucciones.",
        image: "/42-project-badges/covers/cover-push_swap-bonus.png",
        tags: ["Algorithms", "Complexity", "Sorting"],
        tech: ["C", "Optimization"],
        link: "https://github.com/VolmerES/push_swap",
        status: "84/100"
    },
    {
        title: "Philosophers",
        description: "Solución al problema de los filósofos comensales. Gestión de hilos, mutexes y prevención de deadlocks.",
        image: "/42-project-badges/covers/cover-philosophers-bonus.png",
        tags: ["Concurrency", "Threads", "Mutex"],
        tech: ["C", "Pthreads"],
        link: "https://github.com/VolmerES/Philosophers-2",
        status: "100/100"
    },
    {
        title: "Minishell",
        description: "Creación de una shell minimalista funcional. Pipes, redirecciones, variables de entorno y manejo de señales.",
        image: "/42-project-badges/covers/cover-minishell-bonus.png",
        tags: ["Shell", "UNIX", "Processes"],
        tech: ["C", "Bash Logic"],
        link: "https://github.com/VolmerES/Minishell",
        status: "100/100"
    },
    {
        title: "Cub3D",
        description: "Motor gráfico 3D usando Raycasting, inspirado en Wolfenstein 3D. Texturas, colisiones y movimiento.",
        image: "/42-project-badges/covers/cover-cub3d-bonus.png",
        tags: ["Graphics", "Raycasting", "Math"],
        tech: ["C", "MiniLibX"],
        link: "https://github.com/VolmerES/Cub3D",
        status: "115/100"
    },
    {
        title: "NetPractice",
        description: "Ejercicio de configuración de redes. Cálculo de máscaras de subred y direccionamiento IP.",
        image: "/42-project-badges/covers/cover-net_practice-bonus.png",
        tags: ["Network", "SysAdmin"],
        tech: ["TCP/IP", "Routing"],
        link: "https://github.com/VolmerES/NetPractice",
        status: "100/100"
    },
    {
        title: "C++ Piscine (00-09)",
        description: "Piscina intensiva de C++. Programación Orientada a Objetos desde lo básico hasta plantillas y contenedores STL.",
        image: "/42-project-badges/covers/cover-cpp-bonus.png",
        tags: ["OOP", "C++", "STL"],
        tech: ["C++98", "Classes"],
        link: "#",
        status: "80-100/100"
    },
    {
        title: "Inception",
        description: "Administración de un cluster de contenedores Docker. Configuración manual de Nginx, WordPress y MariaDB.",
        image: "/42-projects/inception.png",
        tags: ["DevOps", "Docker", "SysAdmin"],
        tech: ["Docker", "Docker-Compose"],
        link: "#",
        status: "100/100"
    },
    {
        title: "ft_irc",
        description: "Creación de un servidor IRC compatible con clientes reales (como irssi). Manejo de sockets no bloqueantes y I/O multiplexing.",
        image: "/42-projects/ft_irc.png",
        tags: ["Network", "Sockets", "C++"],
        tech: ["C++98", "Poll/Epoll"],
        link: "#",
        status: "100/100"
    },
    {
        title: "Cybersecurity Piscine",
        description: "Piscina intensiva de Ciberseguridad. Retos de CTF, esteganografía, criptografía, web exploitation y forense.",
        image: "/42-projects/cybersecurity.png",
        tags: ["Security", "CTF", "Pentesting"],
        tech: ["Kali Linux", "Wireshark"],
        link: "https://github.com/VolmerES/Discovery_CyberSec_42_ES",
        status: "100/100"
    },
    {
        title: "ft_transcendence",
        description: "El proyecto final del Common Core. Una plataforma web de Ping-Pong con chat en tiempo real, autenticación OAuth y juego online multijugador.",
        image: "/42-project-badges/covers/cover-ft_transcendence-bonus.png",
        tags: ["Web", "NestJS", "React/Vue"],
        tech: ["TypeScript", "Docker", "Socket.io"],
        link: "#",
        status: "En Progreso"
    }
];
---

<Layout title="42 PROJECTS | Juan Bautista">


    <main class="relative pt-32 pb-20">
        <!-- Intra Profile Header -->
        <section class="hidden md:block max-w-7xl mx-auto px-6 mb-16 font-sans">
             <div class="relative w-full bg-[#1e1e1e] overflow-hidden rounded-lg shadow-2xl border border-white/10">
                 <!-- Background Banner (Ignisaria Theme) -->
                 <div class="absolute inset-0 bg-[#2d1212]">
                     <!-- Abstract Gradient to simulate the cover -->
                     <div class="absolute inset-0 bg-gradient-to-r from-red-900/40 via-black/60 to-black/90"></div>
                     <!-- Noise texture if possible, or just circles -->
                     <div class="absolute -right-20 -top-20 w-[500px] h-[500px] bg-red-600/20 blur-[100px] rounded-full"></div>
                 </div>

                 <!-- Content Container -->
                 <div class="relative z-10 p-3 md:p-8">
                    
                    <!-- Top Row: Profile & Info -->
                    <div class="flex flex-col md:flex-row gap-3 md:gap-10 mb-4 md:mb-8">
                        <!-- Profile Pic -->
                        <div class="flex-shrink-0 relative">
                             <div class="w-20 h-20 md:w-36 md:h-36 rounded-full border-4 border-[#1e1e1e] overflow-hidden shadow-2xl relative z-10 bg-black">
                                <img src="/profile.png" alt="jdelorme" class="w-full h-full object-cover filter contrast-110">
                             </div>
                             <!-- Coalition Badge (Triangle) -->
                             <div class="absolute -bottom-1 -right-1 md:-bottom-2 md:-right-2 bg-[#1e1e1e] rounded-full p-1 z-20">
                                 <div class="w-7 h-7 md:w-10 md:h-10 bg-gradient-to-br from-red-500 to-red-700 clip-path-triangle flex items-center justify-center shadow-lg transform rotate-0">
                                     <svg class="w-4 h-4 md:w-6 md:h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                                 </div>
                             </div>
                        </div>

                        <!-- User Info -->
                        <div class="flex-grow flex flex-col justify-end pb-2">
                             <!-- Name & Login -->
                             <div class="flex flex-col md:flex-row md:items-end gap-1 md:gap-4 mb-3 md:mb-4 text-white">
                                 <h1 class="text-lg md:text-3xl font-bold tracking-tight">Juan Bautista Delorme Pinedo</h1>
                                 <span class="text-gray-400 text-sm md:text-lg md:mb-1">jdelorme</span>
                             </div>

                             <!-- Stats Bar -->
                             <div class="bg-black/80 backdrop-blur-md rounded border border-white/5 flex items-center justify-between px-2 md:px-6 py-2 md:py-3 text-xs md:text-sm gap-1">
                                 <div class="flex flex-col items-center px-1 md:px-4">
                                     <span class="text-[8px] md:text-[10px] text-red-400 uppercase font-bold tracking-wider mb-0.5">Wallet</span>
                                     <span class="font-bold text-white text-sm md:text-lg flex items-center gap-1">385 <span class="text-[10px] md:text-xs text-gray-500">₳</span></span>
                                 </div>
                                 <div class="w-px h-6 md:h-8 bg-white/10"></div>
                                 <div class="flex flex-col items-center px-1 md:px-4">
                                     <span class="text-[8px] md:text-[10px] text-red-400 uppercase font-bold tracking-wider mb-0.5">Points</span>
                                     <span class="font-bold text-yellow-500 text-sm md:text-lg">8</span>
                                 </div>
                                 <div class="w-px h-6 md:h-8 bg-white/10 hidden sm:block"></div>
                                 <div class="hidden sm:flex flex-col items-center px-1 md:px-4">
                                     <span class="text-[8px] md:text-[10px] text-red-400 uppercase font-bold tracking-wider mb-0.5">Cursus</span>
                                     <span class="font-bold text-white text-sm md:text-lg">42cursus</span>
                                 </div>
                                 <div class="w-px h-6 md:h-8 bg-white/10 hidden md:block"></div>
                                 <div class="hidden md:flex flex-col items-center px-4">
                                     <span class="text-[10px] text-red-400 uppercase font-bold tracking-wider mb-0.5">Grade</span>
                                     <span class="font-bold text-white text-lg">Cadet</span>
                                 </div>
                             </div>
                        </div>

                        <!-- Right Contact Info (Desktop) -->
                        <div class="hidden lg:flex flex-col gap-2 text-right text-gray-400 text-sm py-2">
                            <a href="tel:+34622557739" class="hover:text-white transition-colors flex items-center justify-end gap-2">
                                +34 622 557 739
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                            </a>
                            <a href="mailto:jdelorme@student.42madrid.com" class="hover:text-white transition-colors flex items-center justify-end gap-2">
                                jdelorme@student.42madrid.com
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
                            </a>
                            <div class="flex items-center justify-end gap-2">
                                Madrid
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                            </div>
                        </div>
                    </div>

                    <!-- Widgets Row - Hidden on mobile -->
                    <div class="hidden md:grid grid-cols-2 gap-6 mb-8">
                        <!-- Weekly Attendance -->
                        <div class="bg-black/30 border border-white/5 rounded p-4 h-36 flex flex-col backdrop-blur-sm">
                            <span class="text-[10px] text-gray-400 font-bold uppercase tracking-wider mb-4">Weekly Attendance</span>
                            <div class="flex-grow flex items-end justify-between px-2 gap-2">
                                <div class="w-full bg-[#2c2c2c] h-[30%] rounded-t-sm hover:h-[40%] transition-all duration-300"></div>
                                <div class="w-full bg-[#2c2c2c] h-[50%] rounded-t-sm hover:h-[60%] transition-all duration-300"></div>
                                <div class="w-full bg-[#2c2c2c] h-[20%] rounded-t-sm hover:h-[30%] transition-all duration-300"></div>
                                <div class="w-full bg-red-600 h-[70%] rounded-t-sm hover:h-[80%] transition-all duration-300 shadow-[0_0_10px_rgba(220,38,38,0.5)]"></div>
                            </div>
                            <div class="flex justify-between text-[10px] text-gray-500 mt-2 px-1">
                                <span>W-4</span><span>W-3</span><span>W-2</span><span>Last Week</span>
                            </div>
                        </div>
                        
                        <!-- Online Status -->
                        <div class="bg-gradient-to-br from-green-900/40 to-black/40 border border-green-500/20 rounded p-4 h-36 flex flex-col items-center justify-center backdrop-blur-sm relative overflow-hidden group">
                             <div class="absolute inset-0 bg-cover opacity-20 group-hover:opacity-30 transition-opacity duration-700" style="background-image: url('https://cdn.intra.42.fr/coalition/cover/205/ignisaria_cover.jpg');"></div>
                            <div class="absolute right-0 top-0 w-20 h-20 bg-green-500/10 blur-2xl rounded-full"></div>
                            <div class="relative z-10 text-center flex flex-col items-center">
                                <div class="flex items-center gap-2 mb-2">
                                    <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse shadow-[0_0_10px_rgba(34,197,94,0.8)]"></div>
                                    <span class="text-xl font-medium text-green-400">Online</span>
                                </div>
                                <span class="text-sm text-gray-400">Disponible</span>
                            </div>
                        </div>
                    </div>

                    <!-- Level Bar -->
                    <div class="w-full relative h-8 md:h-12 bg-[#121212] rounded overflow-hidden flex items-center justify-center border border-white/10 shadow-inner group">
                        <div class="absolute left-0 top-0 bottom-0 bg-gradient-to-r from-red-800 to-red-600 w-[68%] transition-all duration-1000 group-hover:brightness-110">
                            <!-- Striped pattern overlay -->
                            <div class="w-full h-full bg-[linear-gradient(45deg,rgba(255,255,255,0.1)_25%,transparent_25%,transparent_50%,rgba(255,255,255,0.1)_50%,rgba(255,255,255,0.1)_75%,transparent_75%,transparent)] bg-[length:1rem_1rem] opacity-30"></div>
                        </div>
                        <span class="relative z-10 font-bold text-white drop-shadow-[0_2px_2px_rgba(0,0,0,0.8)] text-sm md:text-base tracking-widest uppercase">level 5 - 68%</span>
                    </div>
                 </div>
             </div>
        </section>

        <!-- Projects Grid -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <h2 class="text-3xl font-bold font-heading mb-12 flex items-center gap-4">
                <span class="w-8 h-1 bg-neon-pink"></span>
                 PROYECTOS DESTACADOS
            </h2>
            
            <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-3 gap-4 md:gap-8">
                {projects.map((project) => (
                    <article class="group relative flex flex-col h-full rounded-2xl overflow-hidden bg-[#0a0a0a] border border-white/10 hover:border-white/30 transition-all duration-500 hover:shadow-[0_0_30px_rgba(255,255,255,0.05)]">
                        <!-- Image Container -->
                        <div class="w-full h-32 md:h-48 overflow-hidden relative flex-shrink-0">
                            <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" style={`background-image: url('${project.image}');`}></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent opacity-80"></div>
                            
                            <!-- Status Badge -->
                            <div class="absolute top-2 left-2">
                                <span class={`px-2 py-1 text-[10px] font-bold uppercase tracking-wider border rounded text-white ${project.status.includes('100') || project.status.includes('115') || project.status.includes('125') ? 'bg-green-500/20 border-green-500 text-green-400' : 'bg-yellow-500/20 border-yellow-500 text-yellow-400'}`}>
                                    {project.status}
                                </span>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-3 md:p-6 flex flex-col flex-grow relative z-10">
                            <div class="flex flex-wrap gap-1 md:gap-2 mb-2 md:mb-3">
                                {project.tags.slice(0, 2).map(tag => (
                                    <span class="text-[8px] md:text-[10px] font-bold uppercase tracking-wider text-gray-500">
                                        #{tag}
                                    </span>
                                ))}
                            </div>
                            
                            <h3 class="text-sm md:text-2xl font-bold font-heading mb-1 md:mb-2 group-hover:text-neon-cyan transition-colors line-clamp-1">{project.title}</h3>
                            <p class="text-xs md:text-sm text-gray-400 mb-3 md:mb-6 leading-relaxed line-clamp-2 md:line-clamp-3">
                                {project.description}
                            </p>
                            
                            <!-- Tech Stack & Link -->
                            <div class="mt-auto pt-2 md:pt-4 border-t border-white/5 flex justify-between items-center">
                                <div class="flex flex-wrap gap-1 md:gap-2">
                                    {project.tech.slice(0, 1).map(t => (
                                        <span class="text-[10px] md:text-xs font-mono text-neon-pink/80">./{t}</span>
                                    ))}
                                </div>
                                
                                <a href={project.link} class="inline-flex items-center justify-center w-6 h-6 md:w-8 md:h-8 rounded-full bg-white/5 hover:bg-neon-cyan hover:text-black transition-all">
                                    <svg class="w-3 h-3 md:w-4 md:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                </a>
                            </div>
                        </div>
                    </article>
                ))}
            </div>
        </section>


    </main>
</Layout>
