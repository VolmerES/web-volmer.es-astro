                            <div class="w-full h-px bg-white/10 mb-3 w-1/2 mx-auto"></div>
                            <span class="text-[10px] text-gray-400 uppercase tracking-wider">Common Core ETA</span>
                            <span class="text-sm text-gray-200">15/06/2026</span>
                        </div>
                    </div>

                    <!-- Level Bar -->
                    <div class="w-full relative h-12 bg-[#121212] rounded overflow-hidden flex items-center justify-center border border-white/10 shadow-inner group">
                        <div class="absolute left-0 top-0 bottom-0 bg-gradient-to-r from-red-800 to-red-600 w-[68%] transition-all duration-1000 group-hover:brightness-110">
                            <!-- Striped pattern overlay -->
                            <div class="w-full h-full bg-[linear-gradient(45deg,rgba(255,255,255,0.1)_25%,transparent_25%,transparent_50%,rgba(255,255,255,0.1)_50%,rgba(255,255,255,0.1)_75%,transparent_75%,transparent)] bg-[length:1rem_1rem] opacity-30"></div>
                        </div>
                        <span class="relative z-10 font-bold text-white drop-shadow-[0_2px_2px_rgba(0,0,0,0.8)] text-base tracking-widest uppercase">level 5 - 68%</span>
                    </div>
                 </div>
             </div>
        </section>

        <!-- Projects Grid -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <h2 class="text-3xl font-bold font-heading mb-12 flex items-center gap-4">
