<script>
    document.addEventListener('astro:page-load', () => {
        const modal = document.getElementById('budget-modal') as HTMLDialogElement;
        const trigger = document.getElementById('budget-btn');
        const closeBtn = document.getElementById('close-budget-modal');

        if(!modal || !trigger) return;

        // State
        let selection = {
            service: '',
            webType: '',
            ecommerce: ''
        };
        let history: string[] = []; // Stack to track stages

        // Logic to show stage
        const showStage = (stageId: string) => {
             document.querySelectorAll('.stage-content').forEach(el => el.classList.add('hidden'));
             const target = document.getElementById(stageId);
             if(target) target.classList.remove('hidden');

             // Update indicators
             const indicators = [
                 document.getElementById('step-1-indicator'), 
                 document.getElementById('step-2-indicator'), 
                 document.getElementById('step-3-indicator')
             ];
             
             // Reset
             indicators.forEach(i => i?.classList.replace('bg-neon-cyan', 'bg-white/10'));

             if(stageId === 'stage-1') {
                 indicators[0]?.classList.replace('bg-white/10', 'bg-neon-cyan');
             } else if(stageId.includes('stage-2')) {
                 indicators[0]?.classList.replace('bg-white/10', 'bg-neon-cyan');
                 indicators[1]?.classList.replace('bg-white/10', 'bg-neon-cyan');
             } else if(stageId.includes('stage-3') || stageId === 'stage-final') {
                 indicators.forEach(i => i?.classList.replace('bg-white/10', 'bg-neon-cyan'));
             }
        };

        const updateSummary = () => {
             const summaryEl = document.getElementById('summary-text');
             if(!summaryEl) return;
             
             // UI Summary (Structured for quick reading)
             let uiText = `• Servicio: ${selection.service === 'app' ? 'Aplicación Móvil' : selection.service === 'drone' ? 'Vuelo de Dron' : 'Desarrollo Web'}\n`;
             if(selection.service === 'web') {
                 uiText += `• Tipo: ${selection.webType === 'creation' ? 'Creación Nueva' : 'Mantenimiento'}\n`;
                 if(selection.webType === 'creation') {
                     uiText += `• E-commerce: ${selection.ecommerce === 'yes' ? 'Sí' : 'No'}`;
                 }
             }
             summaryEl.innerText = uiText;
             
             // Email/WhatsApp Body (Natural Language)
             let emailBody = "Hola Juan, \n\nMe gustaría solicitar un presupuesto con los siguientes detalles:\n\n";
             
             if (selection.service === 'app') {
                emailBody += "Estoy interesado en el desarrollo de una Aplicación Móvil (iOS/Android). Busco una solución profesional y me gustaría hablar sobre los detalles del proyecto.";
             } else if (selection.service === 'drone') {
                emailBody += "Estoy interesado en contratar servicios de Vuelo de Dron. Necesito grabaciones aéreas en 4K y/o fotografía para un proyecto específico.";
             } else if (selection.service === 'web') {
                emailBody += "Estoy interesado en un proyecto de Desarrollo Web.";
                
                if (selection.webType === 'maintenance') {
                    emailBody += "\nConcretamente, necesito servicios de MANTENIMIENTO para optimizar, arreglar o actualizar una web existente.";
                } else {
                    emailBody += "\nConcretamente, necesito la CREACIÓN de un sitio web nuevo.";
                    if (selection.ecommerce === 'yes') {
                        emailBody += "\nAdemás, el proyecto REQUIERE una tienda online (E-commerce) para vender productos o servicios.";
                    } else {
                         emailBody += "\nEl proyecto NO requiere tienda online, sería una web corporativa, portfolio o landing page informativa.";
                    }
                }
             }
             
             emailBody += "\n\nQuedo a la espera de tu respuesta para concertar una reunión o avanzar con la propuesta. \n\nUn saludo.";
             
             // Update Textarea with generated body
             const messageBox = document.getElementById('budget-user-message') as HTMLTextAreaElement;
             if(messageBox) {
                 messageBox.value = emailBody;
             }
             
             // Update Links
             const subject = `Presupuesto: ${selection.service === 'app' ? 'App Móvil' : selection.service === 'drone' ? 'Dron' : 'Web'}`;
             
             // Email
             const mailBtn = document.getElementById('send-mail');
             if(mailBtn) {
                 mailBtn.onclick = async (e) => {
                     e.preventDefault();
                     const emailInput = document.getElementById('budget-user-email') as HTMLInputElement;
                     const phoneInput = document.getElementById('budget-user-phone') as HTMLInputElement;
                     const messageInput = document.getElementById('budget-user-message') as HTMLTextAreaElement;
                     
                     if (!emailInput || !emailInput.value) {
                         alert('Por favor, introduce tu email para poder responderte.');
                         emailInput?.focus();
                         return;
                     }
                     
                     const originalText = mailBtn.innerText;
                     mailBtn.innerText = "Enviando...";
                     mailBtn.setAttribute('disabled', 'true');
                     
                     // Combine message with phone if present
                     let finalMessage = messageInput.value;
                     if(phoneInput && phoneInput.value) {
                         finalMessage += `\n\nTeléfono de contacto: ${phoneInput.value}`;
                     }
                     
                     try {
                         const response = await fetch("https://formspree.io/f/xykkznrl", {
                             method: "POST",
                             headers: { "Content-Type": "application/json" },
                             body: JSON.stringify({
                                 email: emailInput.value,
                                 phone: phoneInput ? phoneInput.value : '',
                                 subject: subject,
                                 message: finalMessage
                             })
                         });
                         
                         if (response.ok) {
                            mailBtn.innerText = "¡Enviado!";
                            mailBtn.style.backgroundColor = "#10b981"; // Emerald
                            setTimeout(() => {
                                modal.close();
                                // Reset button style after close
                                mailBtn.innerText = originalText;
                                mailBtn.style.backgroundColor = "";
                                mailBtn.removeAttribute('disabled');
                                emailInput.value = ""; // Clear email
                                if(phoneInput) phoneInput.value = "";
                            }, 2000);
                         } else {
                             throw new Error('Error al enviar');
                         }
                     } catch (error) {
                         console.error(error);
                         mailBtn.innerText = "Error (Usa WhatsApp)";
                         mailBtn.style.backgroundColor = "#ef4444"; // Red
                         setTimeout(() => {
                             mailBtn.innerText = originalText;
                             mailBtn.style.backgroundColor = "";
                             mailBtn.removeAttribute('disabled');
                         }, 3000);
                     }
                 };
             }

             // WhatsApp Logic
             const whatsappBtn = document.getElementById('send-whatsapp');
             if (whatsappBtn) {
                 whatsappBtn.onclick = (e) => {
                     e.preventDefault();
                     const messageInput = document.getElementById('budget-user-message') as HTMLTextAreaElement;
                     const phoneInput = document.getElementById('budget-user-phone') as HTMLInputElement;
                     
                     let finalMessage = messageInput.value;
                     if(phoneInput && phoneInput.value) {
                         finalMessage += `\n\nMi teléfono: ${phoneInput.value}`;
                     }
                     
                     const waLink = `https://wa.me/34622557739?text=${encodeURIComponent(finalMessage)}`;
                     window.open(waLink, '_blank');
                 };
             }
        };

        // Open/Close
        trigger.addEventListener('click', () => {
            modal.showModal();
            document.body.style.overflow = 'hidden';
            // Reset
            selection = { service: '', webType: '', ecommerce: '' };
            history = ['stage-1'];
            showStage('stage-1');
        });

        const closeModal = () => {
            modal.close();
            document.body.style.overflow = '';
        };
        closeBtn?.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if(e.target === modal) closeModal();
        });


        // Step 1 Click Handlers
        document.querySelectorAll('.service-select').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const service = (e.currentTarget as HTMLElement).dataset.service || '';
                selection.service = service;
                
                if(service === 'web') {
                    history.push('stage-2-web');
                    showStage('stage-2-web');
                } else {
                    history.push('stage-final');
                    showStage('stage-final');
                    updateSummary();
                }
            });
        });

        // Step 2 Web Type Handlers
        document.querySelectorAll('.web-type-select').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const type = (e.currentTarget as HTMLElement).dataset.webType || '';
                selection.webType = type;

                if(type === 'creation') {
                    history.push('stage-3-web-creation');
                    showStage('stage-3-web-creation');
                } else {
                    history.push('stage-final');
                    showStage('stage-final');
                    updateSummary();
                }
            });
        });

        // Step 3 Ecommerce Handlers
        document.querySelectorAll('.ecommerce-select').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const ecommerce = (e.currentTarget as HTMLElement).dataset.ecommerce || '';
                selection.ecommerce = ecommerce;
                
                history.push('stage-final');
                showStage('stage-final');
                updateSummary();
            });
        });

        // Back Buttons
        document.querySelectorAll('.back-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if(history.length > 1) {
                    history.pop(); // Remove current
                    const prevStage = history[history.length - 1];
                    if (prevStage) showStage(prevStage);
                }
            });
        });

    });
</script>
