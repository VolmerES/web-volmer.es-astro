---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="SERVICIOS | Juan Bautista">


    <main class="relative pt-32 pb-20">
        <!-- Hero Section -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
            <div class="max-w-3xl">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-neon-cyan/30 bg-neon-cyan/5 text-neon-cyan text-xs font-bold tracking-wider mb-6">
                    <span class="w-2 h-2 rounded-full bg-neon-cyan"></span>
                    DIGITAL SOLUTIONS
                </div>
                <h1 class="font-heading text-5xl md:text-7xl font-bold leading-tight mb-8">
                    BRINGING YOUR <br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-neon-cyan to-neon-pink">VISION</span> TO CODE.
                </h1>
                <p class="text-xl text-gray-400 leading-relaxed max-w-2xl">
                    I offer a complete range of services to transform ideas into high-impact digital products. Quality, design, and performance in every line of code.
                </p>
            </div>
        </section>

        <!-- Services Grid -->
        <section class="max-w-7xl mx-auto px-6 mb-32">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Service 1 -->
                <div class="group relative p-8 rounded-2xl bg-[#0a0a0a] border border-white/10 hover:border-neon-cyan/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(5,217,232,0.1)] overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-neon-cyan/10 rounded-full blur-[50px] group-hover:bg-neon-cyan/20 transition-all"></div>
                    
                    <div class="relative z-10">
                        <div class="w-12 h-12 mb-6 rounded-lg bg-neon-cyan/10 flex items-center justify-center text-neon-cyan">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-heading font-bold mb-4 group-hover:text-neon-cyan transition-colors">Web Development</h3>
                        <p class="text-gray-400 mb-6">
                            Ultra-fast, scalable, and SEO-optimized websites and web applications. From landing pages with CMS to complex SaaS platforms.
                        </p>
                        <ul class="space-y-2 text-sm text-gray-500">
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-neon-cyan rounded-full"></span> Modern Stack (Astro, React, Next.js)
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-neon-cyan rounded-full"></span> CMS (WordPress, Elementor)
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-neon-cyan rounded-full"></span> Performance & SEO Optimization
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Service 2 -->
                <div class="group relative p-8 rounded-2xl bg-[#0a0a0a] border border-white/10 hover:border-neon-pink/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(255,42,109,0.1)] overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-neon-pink/10 rounded-full blur-[50px] group-hover:bg-neon-pink/20 transition-all"></div>
                    
                    <div class="relative z-10">
                        <div class="w-12 h-12 mb-6 rounded-lg bg-neon-pink/10 flex items-center justify-center text-neon-pink">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-heading font-bold mb-4 group-hover:text-neon-pink transition-colors">Mobile Development</h3>
                        <p class="text-gray-400 mb-6">
                            Multi-platform applications with Flutter that feel fluid and powerful. We bring your idea to iOS and Android with a single codebase.
                        </p>
                        <ul class="space-y-2 text-sm text-gray-500">
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-neon-pink rounded-full"></span> Flutter (iOS & Android)
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-neon-pink rounded-full"></span> Adaptive Design
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-neon-pink rounded-full"></span> App Store & Play Store Publishing
                            </li>
                        </ul>
                    </div>
                </div>



                <!-- Service 4 -->
                <div class="group relative p-8 rounded-2xl bg-[#0a0a0a] border border-white/10 hover:border-yellow-400/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(250,204,21,0.1)] overflow-hidden">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-yellow-400/10 rounded-full blur-[50px] group-hover:bg-yellow-400/20 transition-all"></div>
                    
                    <div class="relative z-10">
                        <div class="w-12 h-12 mb-6 rounded-lg bg-yellow-400/10 flex items-center justify-center text-yellow-400">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-heading font-bold mb-4 group-hover:text-yellow-400 transition-colors">UI/UX Design</h3>
                        <p class="text-gray-400 mb-6">
                            Interfaces that are not only beautiful but functional. User-centered design to maximize conversion.
                        </p>
                        <ul class="space-y-2 text-sm text-gray-500">
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-yellow-400 rounded-full"></span> Prototyping in Figma
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-yellow-400 rounded-full"></span> Design Systems
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-yellow-400 rounded-full"></span> Usability Testing
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Service 5 -->
                <div class="group relative p-8 rounded-2xl bg-[#0a0a0a] border border-white/10 hover:border-emerald-500/50 transition-all duration-300 hover:shadow-[0_0_30px_rgba(16,185,129,0.1)] overflow-hidden md:col-span-2 lg:col-span-1">
                    <div class="absolute top-0 right-0 w-32 h-32 bg-emerald-500/10 rounded-full blur-[50px] group-hover:bg-emerald-500/20 transition-all"></div>
                    
                    <div class="relative z-10">
                        <div class="w-12 h-12 mb-6 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-500">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
                            </svg>
                        </div>
                        <h3 class="text-2xl font-heading font-bold mb-4 group-hover:text-emerald-500 transition-colors">Drone Flights</h3>
                        <p class="text-gray-400 mb-6">
                            Professional aerial recording in 4K and high-resolution photography. Ideal for events, real estate, and construction monitoring.
                        </p>
                        <ul class="space-y-2 text-sm text-gray-500">
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full"></span> 4K Video & HDR Photography
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full"></span> Official Pilot License
                            </li>
                            <li class="flex items-center gap-2">
                                <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full"></span> Editing & Post-production
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

        <!-- Process Section -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
            <h2 class="text-3xl font-heading font-bold mb-12 text-center">MY PROCESS</h2>
            <div class="flex flex-col md:flex-row justify-between gap-8 relative">
                <!-- Line connector -->
                <div class="hidden md:block absolute top-8 left-0 w-full h-0.5 bg-white/10 z-0"></div>

                <!-- Step 1 -->
                <div class="relative z-10 flex-1 text-center group">
                    <div class="w-16 h-16 mx-auto bg-dark-bg border border-neon-cyan/50 text-neon-cyan rounded-full flex items-center justify-center text-xl font-bold mb-4 group-hover:bg-neon-cyan group-hover:text-dark-bg transition-colors duration-300">1</div>
                    <h3 class="text-xl font-bold mb-2">Discovery</h3>
                    <p class="text-sm text-gray-400">I analyze your needs and goals to map out the best plan.</p>
                </div>

                <!-- Step 2 -->
                <div class="relative z-10 flex-1 text-center group">
                    <div class="w-16 h-16 mx-auto bg-dark-bg border border-neon-pink/50 text-neon-pink rounded-full flex items-center justify-center text-xl font-bold mb-4 group-hover:bg-neon-pink group-hover:text-dark-bg transition-colors duration-300">2</div>
                    <h3 class="text-xl font-bold mb-2">Design & Strategy</h3>
                    <p class="text-sm text-gray-400">We create wireframes and define the technical architecture.</p>
                </div>

                 <!-- Step 3 -->
                 <div class="relative z-10 flex-1 text-center group">
                    <div class="w-16 h-16 mx-auto bg-dark-bg border border-purple-500/50 text-purple-500 rounded-full flex items-center justify-center text-xl font-bold mb-4 group-hover:bg-purple-500 group-hover:text-dark-bg transition-colors duration-300">3</div>
                    <h3 class="text-xl font-bold mb-2">Development</h3>
                    <p class="text-sm text-gray-400">Implementation with clean code and rigorous testing.</p>
                </div>

                 <!-- Step 4 -->
                 <div class="relative z-10 flex-1 text-center group">
                    <div class="w-16 h-16 mx-auto bg-dark-bg border border-yellow-400/50 text-yellow-400 rounded-full flex items-center justify-center text-xl font-bold mb-4 group-hover:bg-yellow-400 group-hover:text-dark-bg transition-colors duration-300">4</div>
                    <h3 class="text-xl font-bold mb-2">Launch</h3>
                    <p class="text-sm text-gray-400">Deployment, optimization, and continuous support.</p>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="max-w-4xl mx-auto px-6 text-center py-20 bg-gradient-to-tr from-white/5 to-transparent rounded-3xl border border-white/5">
            <h2 class="text-4xl md:text-5xl font-heading font-bold mb-6">Ready to start?</h2>
            <p class="text-xl text-gray-400 mb-10">Turn your ideas into impactful digital reality.</p>
            <button id="budget-btn" class="inline-flex items-center justify-center px-10 py-4 text-lg font-bold text-dark-bg bg-neon-cyan hover:bg-white transition-all rounded-full shadow-[0_0_20px_rgba(5,217,232,0.4)]">
                REQUEST A QUOTE
            </button>
        </section>

    </main>
</Layout>

<!-- Budget Multi-step Modal -->
<dialog id="budget-modal" class="bg-transparent p-0 m-0 backdrop:bg-black/80 backdrop:backdrop-blur-sm w-full h-full max-w-none max-h-none fixed inset-0 z-[100] open:flex items-center justify-center pointer-events-none open:pointer-events-auto transition-all duration-300 opacity-0 open:opacity-100">
    <div class="bg-[#121212] border border-white/10 rounded-2xl w-full max-w-3xl mx-4 relative overflow-hidden shadow-2xl scale-95 open:scale-100 transition-all duration-300 p-8 cyberpunk-modal min-h-[400px]">
        
        <!-- Header -->
        <div class="flex justify-between items-center mb-8">
            <div>
                <h2 class="text-2xl font-heading font-bold text-white">Quote<span class="text-neon-cyan">.</span></h2>
                <div class="flex gap-1 mt-2">
                    <span id="step-1-indicator" class="w-8 h-1 bg-neon-cyan rounded-full transition-colors"></span>
                    <span id="step-2-indicator" class="w-8 h-1 bg-white/10 rounded-full transition-colors"></span>
                    <span id="step-3-indicator" class="w-8 h-1 bg-white/10 rounded-full transition-colors"></span>
                </div>
            </div>
            <button id="close-budget-modal" class="text-gray-400 hover:text-white transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Content Stages -->
        <div id="modal-content" class="relative">
            <!-- Stage 1: Main Service -->
            <div id="stage-1" class="stage-content transition-all duration-300">
                <h3 class="text-xl font-bold text-white mb-6">What type of service are you looking for?</h3>
                <div class="grid gap-4">
                    <button data-service="app" class="service-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-neon-pink/50 hover:bg-neon-pink/10 transition-all text-left flex items-center gap-4 group">
                        <div class="w-10 h-10 rounded-full bg-neon-pink/20 text-neon-pink flex items-center justify-center group-hover:bg-neon-pink group-hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" /></svg>
                        </div>
                        <div>
                            <span class="block font-bold text-white">Mobile Application</span>
                            <span class="text-xs text-gray-400">iOS, Android, Flutter</span>
                        </div>
                    </button>
                    
                    <button data-service="drone" class="service-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-emerald-500/50 hover:bg-emerald-500/10 transition-all text-left flex items-center gap-4 group">
                         <div class="w-10 h-10 rounded-full bg-emerald-500/20 text-emerald-500 flex items-center justify-center group-hover:bg-emerald-500 group-hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" /></svg>
                        </div>
                        <div>
                            <span class="block font-bold text-white">Drone Flight</span>
                            <span class="text-xs text-gray-400">4K Recording, Photography</span>
                        </div>
                    </button>

                    <button data-service="web" class="service-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-neon-cyan/50 hover:bg-neon-cyan/10 transition-all text-left flex items-center gap-4 group">
                         <div class="w-10 h-10 rounded-full bg-neon-cyan/20 text-neon-cyan flex items-center justify-center group-hover:bg-neon-cyan group-hover:text-white transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                        </div>
                        <div>
                            <span class="block font-bold text-white">Website</span>
                            <span class="text-xs text-gray-400">Corporate, Landing, SaaS</span>
                        </div>
                    </button>
                </div>
            </div>

            <!-- Stage 2: Web Specific - Type -->
            <div id="stage-2-web" class="stage-content hidden transition-all duration-300">
                 <button class="back-btn text-xs text-gray-400 hover:text-white mb-4 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                    Back
                </button>
                <h3 class="text-xl font-bold text-white mb-6">What do you need for your website?</h3>
                <div class="grid gap-4">
                     <button data-web-type="creation" class="web-type-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-neon-cyan/50 hover:bg-neon-cyan/10 transition-all text-left group">
                        <span class="block font-bold text-white text-lg mb-1 group-hover:text-neon-cyan">New Creation</span>
                        <span class="text-xs text-gray-400">Start a project from scratch</span>
                    </button>
                     <button data-web-type="maintenance" class="web-type-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-neon-cyan/50 hover:bg-neon-cyan/10 transition-all text-left group">
                        <span class="block font-bold text-white text-lg mb-1 group-hover:text-neon-cyan">Maintenance</span>
                        <span class="text-xs text-gray-400">Update or fix existing website</span>
                    </button>
                </div>
            </div>

             <!-- Stage 3: Web Specific - Ecommerce -->
            <div id="stage-3-web-creation" class="stage-content hidden transition-all duration-300">
                 <button class="back-btn text-xs text-gray-400 hover:text-white mb-4 flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                    Back
                </button>
                <h3 class="text-xl font-bold text-white mb-6">Does it include e-commerce?</h3>
                <div class="grid gap-4">
                     <button data-ecommerce="yes" class="ecommerce-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-neon-cyan/50 hover:bg-neon-cyan/10 transition-all text-left group">
                        <span class="block font-bold text-white text-lg mb-1 group-hover:text-neon-cyan">Yes, I need an online store</span>
                    </button>
                     <button data-ecommerce="no" class="ecommerce-select p-4 rounded-xl border border-white/10 bg-white/5 hover:border-neon-cyan/50 hover:bg-neon-cyan/10 transition-all text-left group">
                        <span class="block font-bold text-white text-lg mb-1 group-hover:text-neon-cyan">No, just an informational site</span>
                    </button>
                </div>
            </div>

            <!-- Final Stage: Contact -->
            <div id="stage-final" class="stage-content hidden transition-all duration-300">
                <h3 class="text-xl font-bold text-white mb-2">Got it!</h3>
                <p class="text-gray-400 mb-6 text-sm">Here is a summary of your request:</p>
                
                <div class="bg-white/5 border border-white/10 rounded-lg p-4 mb-6">
                    <p id="summary-text" class="font-mono text-neon-cyan text-sm"></p>
                </div>

                <!-- User Contact Info -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                    <div>
                        <label for="budget-user-email" class="block text-xs font-bold text-gray-500 mb-1 uppercase">Your Email (Required)</label>
                        <input type="email" id="budget-user-email" required class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-neon-cyan transition-colors" placeholder="your@email.com">
                    </div>
                    <div>
                        <label for="budget-user-phone" class="block text-xs font-bold text-gray-500 mb-1 uppercase">Your Phone (Optional)</label>
                        <input type="tel" id="budget-user-phone" class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-neon-cyan transition-colors" placeholder="+34 ...">
                    </div>
                </div>

                <!-- Editable Message -->
                <div class="mb-6">
                    <label for="budget-user-message" class="block text-xs font-bold text-gray-500 mb-1 uppercase">Message Details (Editable)</label>
                    <textarea id="budget-user-message" rows="6" class="w-full bg-white/5 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-neon-cyan transition-colors resize-y text-sm leading-relaxed"></textarea>
                </div>

                <div class="flex flex-col gap-3">
                    <button id="send-mail" class="w-full bg-white text-black font-bold py-3.5 rounded-lg hover:bg-gray-200 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
                        SEND REQUEST
                    </button>
                    <a href="#" id="send-whatsapp" target="_blank" class="w-full bg-[#25D366] text-white font-bold py-3.5 rounded-lg hover:bg-[#128C7E] transition-colors flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.463 1.065 2.876 1.213 3.074.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/></svg>
                        SEND VIA WHATSAPP
                    </a>
                </div>
            </div>
        </div>
    </div>
</dialog>

<script>
    document.addEventListener('astro:page-load', () => {
        const modal = document.getElementById('budget-modal') as HTMLDialogElement;
        const trigger = document.getElementById('budget-btn');
        const closeBtn = document.getElementById('close-budget-modal');

        if(!modal || !trigger) return;

        // State
        let selection = {
            service: '',
            webType: '',
            ecommerce: ''
        };
        let history: string[] = []; // Stack to track stages

        // Logic to show stage
        const showStage = (stageId: string) => {
             document.querySelectorAll('.stage-content').forEach(el => el.classList.add('hidden'));
             const target = document.getElementById(stageId);
             if(target) target.classList.remove('hidden');

             // Update indicators
             const indicators = [
                 document.getElementById('step-1-indicator'), 
                 document.getElementById('step-2-indicator'), 
                 document.getElementById('step-3-indicator')
             ];
             
             // Reset
             indicators.forEach(i => i?.classList.replace('bg-neon-cyan', 'bg-white/10'));

             if(stageId === 'stage-1') {
                 indicators[0]?.classList.replace('bg-white/10', 'bg-neon-cyan');
             } else if(stageId.includes('stage-2')) {
                 indicators[0]?.classList.replace('bg-white/10', 'bg-neon-cyan');
                 indicators[1]?.classList.replace('bg-white/10', 'bg-neon-cyan');
             } else if(stageId.includes('stage-3') || stageId === 'stage-final') {
                 indicators.forEach(i => i?.classList.replace('bg-white/10', 'bg-neon-cyan'));
             }
        };

             const updateSummary = () => {
              const summaryEl = document.getElementById('summary-text');
              if(!summaryEl) return;
              
              // UI Summary (Structured for quick reading)
              let uiText = `• Service: ${selection.service === 'app' ? 'Mobile App' : selection.service === 'drone' ? 'Drone Flight' : 'Web Development'}\n`;
              if(selection.service === 'web') {
                  uiText += `• Type: ${selection.webType === 'creation' ? 'New Creation' : 'Maintenance'}\n`;
                  if(selection.webType === 'creation') {
                      uiText += `• E-commerce: ${selection.ecommerce === 'yes' ? 'Yes' : 'No'}`;
                  }
              }
              summaryEl.innerText = uiText;
              
              // Email/WhatsApp Body (Natural Language)
              let emailBody = "Hi Juan, \n\nI would like to request a quote with the following details:\n\n";
              
              if (selection.service === 'app') {
                 emailBody += "I am interested in the development of a Mobile App (iOS/Android). I look for a professional solution and would like to talk about the projected details.";
              } else if (selection.service === 'drone') {
                 emailBody += "I am interested in hiring Drone Flight services. I need aerial recordings in 4K and/or photography for a specific project.";
              } else if (selection.service === 'web') {
                 emailBody += "I am interested in a Web Development project.";
                 
                 if (selection.webType === 'maintenance') {
                     emailBody += "\nSpecifically, I need MAINTENANCE services to optimize, fix, or update an existing website.";
                 } else {
                     emailBody += "\nSpecifically, I need the CREATION of a new website.";
                     if (selection.ecommerce === 'yes') {
                         emailBody += "\nAlso, the project REQUIRES an online store (E-commerce) to sell products or services.";
                     } else {
                          emailBody += "\nThe project DOES NOT require an online store, it would be a corporate website, portfolio, or informational landing page.";
                     }
                 }
              }
              
              emailBody += "\n\nI await your response to schedule a meeting or move forward with the proposal. \n\nBest regards.";
              
              // Update Textarea with generated body
              const messageBox = document.getElementById('budget-user-message') as HTMLTextAreaElement;
              if(messageBox) {
                  messageBox.value = emailBody;
              }
              
              // Update Links
              const subject = `Quote: ${selection.service === 'app' ? 'Mobile App' : selection.service === 'drone' ? 'Drone' : 'Web'}`;
              
              // Email
              const mailBtn = document.getElementById('send-mail');
              if(mailBtn) {
                  mailBtn.onclick = async (e) => {
                      e.preventDefault();
                      const emailInput = document.getElementById('budget-user-email') as HTMLInputElement;
                      const phoneInput = document.getElementById('budget-user-phone') as HTMLInputElement;
                      const messageInput = document.getElementById('budget-user-message') as HTMLTextAreaElement;
                      
                      if (!emailInput || !emailInput.value) {
                          alert('Please enter your email so I can respond.');
                          emailInput?.focus();
                          return;
                      }
                     
                     const originalText = mailBtn.innerText;
                     mailBtn.innerText = "Sending...";
                     mailBtn.setAttribute('disabled', 'true');
                     
                     // Combine message with phone if present
                     let finalMessage = messageInput.value;
                     if(phoneInput && phoneInput.value) {
                         finalMessage += `\n\nContact Phone: ${phoneInput.value}`;
                     }
                     
                     try {
                         const response = await fetch("https://formspree.io/f/xykkznrl", {
                             method: "POST",
                             headers: { "Content-Type": "application/json" },
                             body: JSON.stringify({
                                 email: emailInput.value,
                                 phone: phoneInput ? phoneInput.value : '',
                                 subject: subject,
                                 message: finalMessage
                             })
                         });
                         
                         if (response.ok) {
                            mailBtn.innerText = "Sent!";
                            mailBtn.style.backgroundColor = "#10b981"; // Emerald
                            setTimeout(() => {
                                modal.close();
                                // Reset button style after close
                                mailBtn.innerText = originalText;
                                mailBtn.style.backgroundColor = "";
                                mailBtn.removeAttribute('disabled');
                                emailInput.value = ""; // Clear email
                                if(phoneInput) phoneInput.value = "";
                            }, 2000);
                         } else {
                             throw new Error('Error sending');
                         }
                     } catch (error) {
                         console.error(error);
                         mailBtn.innerText = "Error (Use WhatsApp)";
                         mailBtn.style.backgroundColor = "#ef4444"; // Red
                         setTimeout(() => {
                             mailBtn.innerText = originalText;
                             mailBtn.style.backgroundColor = "";
                             mailBtn.removeAttribute('disabled');
                         }, 3000);
                     }
                 };
             }

             // WhatsApp Logic
             const whatsappBtn = document.getElementById('send-whatsapp');
             if (whatsappBtn) {
                 whatsappBtn.onclick = (e) => {
                     e.preventDefault();
                     const messageInput = document.getElementById('budget-user-message') as HTMLTextAreaElement;
                     const phoneInput = document.getElementById('budget-user-phone') as HTMLInputElement;
                     
                     let finalMessage = messageInput.value;
                     if(phoneInput && phoneInput.value) {
                         finalMessage += `\n\nMy phone: ${phoneInput.value}`;
                     }
                     
                     const waLink = `https://wa.me/34622557739?text=${encodeURIComponent(finalMessage)}`;
                     window.open(waLink, '_blank');
                 };
             }
        };

        // Open/Close
        trigger.addEventListener('click', () => {
            modal.showModal();
            document.body.style.overflow = 'hidden';
            // Reset
            selection = { service: '', webType: '', ecommerce: '' };
            history = ['stage-1'];
            showStage('stage-1');
        });

        const closeModal = () => {
            modal.close();
            document.body.style.overflow = '';
        };
        closeBtn?.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if(e.target === modal) closeModal();
        });


        // Step 1 Click Handlers
        document.querySelectorAll('.service-select').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const service = (e.currentTarget as HTMLElement).dataset.service || '';
                selection.service = service;
                
                if(service === 'web') {
                    history.push('stage-2-web');
                    showStage('stage-2-web');
                } else {
                    history.push('stage-final');
                    showStage('stage-final');
                    updateSummary();
                }
            });
        });

        // Step 2 Web Type Handlers
        document.querySelectorAll('.web-type-select').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const type = (e.currentTarget as HTMLElement).dataset.webType || '';
                selection.webType = type;

                if(type === 'creation') {
                    history.push('stage-3-web-creation');
                    showStage('stage-3-web-creation');
                } else {
                    history.push('stage-final');
                    showStage('stage-final');
                    updateSummary();
                }
            });
        });

        // Step 3 Ecommerce Handlers
        document.querySelectorAll('.ecommerce-select').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const ecommerce = (e.currentTarget as HTMLElement).dataset.ecommerce || '';
                selection.ecommerce = ecommerce;
                
                history.push('stage-final');
                showStage('stage-final');
                updateSummary();
            });
        });

        // Back Buttons
        document.querySelectorAll('.back-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                if(history.length > 1) {
                    history.pop(); // Remove current
                    const prevStage = history[history.length - 1];
                    if (prevStage) showStage(prevStage);
                }
            });
        });

    });
</script>
