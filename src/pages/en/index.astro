    const initDroneAnimation = () => {
        const drone = document.getElementById('scroll-drone');
        const droneCard = document.getElementById('drone-card-container');
        
        if (!drone || !droneCard) return;

        let isHovering = false;
        let hoverLoopId: number | null = null;

        // Loop for continuous hovering animation
        const animateHover = () => {
             if (!isHovering) return;

             const time = Date.now() / 1000; // Slower time base
             
             // Vertical Float: Mix of two sine waves for more organic/wind-like movement
             const floatY = (Math.sin(time) * 4) + (Math.sin(time * 2.5) * 1.5); 
             
             // Rotation: Subtle micro-corrections (alabeo)
             const floatRot = Math.cos(time * 0.8) * 2.5; 
             
             // Base Y = 10, Base Rot = 5
             drone.style.transform = `translate(0%, ${10 + floatY}%) rotate(${5 + floatRot}deg) scale(1.4)`;
             
             hoverLoopId = requestAnimationFrame(animateHover);
        };

        const handleScroll = () => {
            const rect = droneCard.getBoundingClientRect();
            const windowHeight = window.innerHeight;
            
            // Starts animation almost as soon as card enters viewport
            const scrollStart = windowHeight * 0.95;
            const scrollEnd = windowHeight * 0.6; // Finishes much earlier
            const scrollProgress = Math.max(0, Math.min(1, (scrollStart - rect.top) / (scrollStart - scrollEnd)));
            
            if (scrollProgress > 0 && scrollProgress < 1) {
                // IN TRANSITION: Calculated by SCROLL
                isHovering = false; // Stop the auto loop while user is scrolling/controlling
                if (hoverLoopId) cancelAnimationFrame(hoverLoopId);

                // Smooth easing function (ease-out-cubic)
                const easeProgress = 1 - Math.pow(1 - scrollProgress, 3);
                
                // Calculate transformations
                // TARGET: Top-Right Corner (relative to CSS top: -5%, right: -5%)
                // FLIGHT PATH: Swoops in from the far right
                // Start: 200% X (Right side), 50% Y (Low)
                // End: 0% X, 10% Y (Visible/Anchored position - slightly lower for alignment)
                const translateX = 200 - (easeProgress * 200); 
                const translateY = 50 - (easeProgress * 40); 
                
                // Rotation: Bank into the turn!
                // Starts angled (20deg) to braking (5deg)
                let rotate = 0;
                if (easeProgress < 0.8) {
                   rotate = 20 - (easeProgress * 15); // Banking
                } else {
                   rotate = 5; // Level out
                }
                
                // Scale
                const scale = 0.5 + (easeProgress * 0.9); // Scale to 1.4
                const opacity = easeProgress; 
                
                // Apply transformations
                drone.style.transform = `translate(${translateX}%, ${translateY}%) rotate(${rotate}deg) scale(${scale})`;
                drone.style.opacity = opacity.toString();
                
            } else if (scrollProgress >= 1) {
