                if (hoverLoopId) cancelAnimationFrame(hoverLoopId);
                drone.style.opacity = '0';
                drone.style.transform = 'translate(200%, 50%) rotate(20deg) scale(0.5)';
            }
        };

        // Use requestAnimationFrame for smooth animation
        let ticking = false;
        const onScroll = () => {
            if (!ticking) {
                window.requestAnimationFrame(() => {
                    handleScroll();
                    ticking = false;
                });
                ticking = true;
            }
        };

        window.addEventListener('scroll', onScroll);
        handleScroll(); // Initial check
    };

    // Laptop scroll animation
    const initLaptopAnimation = () => {
        const laptop = document.getElementById('scroll-laptop-container');
        const laptopCard = document.getElementById('web-card-container');
        
        if (!laptop || !laptopCard) return;

        const handleScroll = () => {
            const rect = laptopCard.getBoundingClientRect();
            const windowHeight = window.innerHeight;
            
            // Calculate scroll progress
            // Starts animation almost as soon as card enters viewport
            const scrollStart = windowHeight * 0.95;
            const scrollEnd = windowHeight * 0.6; // Finishes much earlier
            const scrollProgress = Math.max(0, Math.min(1, (scrollStart - rect.top) / (scrollStart - scrollEnd)));
            
            if (scrollProgress > 0 && scrollProgress <= 1) {
                const easeProgress = 1 - Math.pow(1 - scrollProgress, 3);
                
                // Movement: Lateral slide from right (behind drone card) to left
                // Start: 150% X (Behind Drone Card), 0% Y
                // End: 0% X, -10% Y (Visible/Anchored position)
                const translateX = 150 - (easeProgress * 150); 
                const translateY = -10; // Fixed vertical height mostly
                
                // Rotation: Keep it slight and steady
                const rotate = 5; 
                
                // Scale fixed to 1.0 to prevent pixelation (size controlled by CSS)
                const scale = 1.0;
                const opacity = easeProgress; // Fade In
                
                laptop.style.transform = `translate(${translateX}%, ${translateY}%) rotate(${rotate}deg) scale(${scale})`;
                laptop.style.opacity = opacity.toString();
                
            } else if (scrollProgress > 1) {
                laptop.style.opacity = '1';
                
                // Continuous stable hover at TOP right
                const time = Date.now() / 1000;
                const floatY = Math.sin(time) * 3;
                
                // Final position: Anchored at Top Right Corner, slightly lifted
                // Final position: Anchored at Top Right Corner
                // Scale fixed at 1.0
                laptop.style.transform = `translate(0%, ${-10 + floatY}%) rotate(5deg) scale(1.0)`;
            } else {
                laptop.style.opacity = '0';
                // Reset to start position (behind drone card)
                laptop.style.transform = 'translate(150%, -10%) rotate(5deg) scale(1.0)';
            }
        };

        let ticking = false;
        const onScroll = () => {
            if (!ticking) {
                window.requestAnimationFrame(() => {
                    handleScroll();
                    ticking = false;
                });
                ticking = true;
            }
        };

        window.addEventListener('scroll', onScroll);
        handleScroll();
    };

    // Initialize on load
    document.addEventListener('astro:page-load', () => {
        initChoiceModal();
        initDroneAnimation();
        initLaptopAnimation();
    });
    initChoiceModal();
    initDroneAnimation();
    initLaptopAnimation();


</script>
