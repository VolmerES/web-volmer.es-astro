---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="BLOG | Juan Bautista" showBackground={false}>


    <main class="relative pt-32 pb-20 min-h-screen">
        <!-- CRT Scanlines Effect Strong + Animation + Mouse Distortion -->
        <div class="fixed inset-0 pointer-events-none z-0 select-none overflow-hidden" id="crt-container">
             <!-- Scanlines estáticas -->
            <div class="absolute inset-0 bg-[linear-gradient(rgba(18,16,16,0)_50%,rgba(0,0,0,0.6)_50%),linear-gradient(90deg,rgba(255,0,0,0.06),rgba(0,255,0,0.02),rgba(0,0,255,0.06))] bg-[length:100%_4px,6px_100%] opacity-60"></div>
            
            <!-- Línea de barrido animada -->
            <div class="absolute inset-0 bg-[linear-gradient(transparent_0%,rgba(255,255,255,0.05)_50%,transparent_100%)] opacity-30 animate-scanline bg-[length:100%_20%]"></div>

            <!-- Banda de Distorsión Interactiva -->
            <div class="absolute left-0 w-full h-24 bg-white/5 mix-blend-difference opacity-0 transition-opacity duration-300 distortion-band" style="top: var(--mouse-y, 50%); transform: translateY(-50%) scaleY(1.5);">
            </div>
        </div>

        <script>
            const container = document.querySelector('#crt-container');
            const distortion = document.querySelector('.distortion-band') as HTMLElement;
            
            if (container && distortion) {
                let timeout: number;

                window.addEventListener('mousemove', (e) => {
                    const y = e.clientY;
                    container.setAttribute('style', `--mouse-y: ${y}px`);
                    
                    // Stronger dynamic effect
                    const randomScale = 0.7 + Math.random() * 1.0; // 0.7 to 1.7
                    const opacity = 0.3 + Math.random() * 0.3;     // 0.3 to 0.6
                    
                    distortion.style.opacity = opacity.toString();
                    distortion.style.transform = `translateY(-50%) scaleY(${randomScale})`;
                    
                    // Reset timeout to hide after stop moving
                    window.clearTimeout(timeout);
                    timeout = window.setTimeout(() => {
                        distortion.style.opacity = '0';
                    }, 100);
                });
                
                window.addEventListener('mouseleave', () => {
                    distortion.style.opacity = '0';
                });
            }
        </script>

        <style>
             @keyframes scanline {
                0% { transform: translateY(-100%); }
                100% { transform: translateY(100%); }
            }
            .animate-scanline {
                animation: scanline 8s linear infinite;
            }
            .distortion-band {
                background: repeating-linear-gradient(
                    to bottom,
                    transparent 0%,
                    rgba(255, 255, 255, 0.15) 50%,
                    transparent 100%
                );
                box-shadow: 0 0 20px rgba(5, 217, 232, 0.3);
                backdrop-filter: blur(2px) brightness(1.3);
                mix-blend-mode: overlay;
                pointer-events: none;
            }
        </style>
        
        <section class="max-w-7xl mx-auto px-6 mb-16 flex flex-col items-center relative z-10">
            <div class="w-full flex flex-col items-center text-center">
                
                <!-- Fuentes Retro -->
                <link href="https://fonts.googleapis.com/css2?family=Russo+One&family=Yellowtail&display=swap" rel="stylesheet">
                
                <div class="relative py-12 mb-8 flex flex-col items-center justify-center filter drop-shadow-[0_0_15px_rgba(168,85,247,0.5)]">
                    
                    <!-- Capa 3D Base -->
                    <h1 class="retro-title text-6xl md:text-8xl leading-none select-none relative z-10" data-text="BLOG">
                        BLOG
                    </h1>
                    
                    <!-- Script Neón -->
                    <div class="absolute top-[85%] left-1/2 -translate-x-1/2 -translate-y-1/2 z-20 rotate-[-6deg]">
                        <span class="retro-script text-4xl md:text-5xl whitespace-nowrap text-yellow-300">
                            Volmer
                        </span>
                    </div>

                </div>
                <!-- Línea decorativa o subtítulo -->
                <div class="h-1 w-24 bg-neon-cyan mx-auto mb-8 rounded-full shadow-[0_0_10px_#05d9e8]"></div>

                <style>
                    .retro-title {
                        font-family: 'Russo One', sans-serif;
                        color: transparent;
                        -webkit-text-stroke: 2px #e2e8f0;
                        background: linear-gradient(
                            to bottom,
                            #c026d3 0%,
                            #7e22ce 40%,
                            #ffffff 50%,
                            #cbd5e1 51%,
                            #475569 100%
                        );
                        background-clip: text;
                        -webkit-background-clip: text;
                        transform: skewX(-10deg);
                        /* Sombra 3D Sólida */
                        filter: drop-shadow(4px 4px 0px #581c87) 
                                drop-shadow(8px 8px 0px #3b0764);
                    }
                    
                    /* Brillo superior simulado con ::after */
                    .retro-title::after {
                        content: attr(data-text);
                        position: absolute;
                        left: 0;
                        top: 0;
                        z-index: -1;
                        color: transparent;
                        -webkit-text-stroke: 4px rgba(255,255,255,0.1);
                        background: linear-gradient(to bottom, transparent 40%, white 45%, transparent 55%);
                        background-clip: text;
                        -webkit-background-clip: text;
                    }

                    .retro-script {
                        font-family: 'Yellowtail', cursive;
                        text-shadow: 
                            0 0 5px #facc15,
                            0 0 10px #eab308,
                            0 0 20px #ca8a04,
                            2px 2px 2px rgba(0,0,0,0.8);
                        /* Ligera animación de parpadeo neón */
                        animation: neonPulse 3s infinite alternate;
                    }
                    
                    @keyframes neonPulse {
                        from { text-shadow: 0 0 5px #facc15, 0 0 10px #eab308, 0 0 20px #ca8a04, 2px 2px 2px rgba(0,0,0,0.8); }
                        to { text-shadow: 0 0 10px #facc15, 0 0 20px #eab308, 0 0 40px #ca8a04, 2px 2px 2px rgba(0,0,0,0.8); }
                    }
                </style>
            </div>
        </section>

        <section class="max-w-7xl mx-auto px-6 mb-32 relative z-10">
            {posts.length === 0 ? (
                <div class="text-center py-20 border border-white/10 rounded-2xl bg-[#0a0a0a]">
                    <p class="text-gray-400 text-xl">No hay artículos publicados todavía.</p>
                </div>
            ) : (
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {posts.map((post) => (
                        <article class="group relative flex flex-col h-full rounded-2xl overflow-hidden bg-[#0a0a0a] border border-white/10 hover:border-neon-pink/50 transition-all duration-500 hover:shadow-[0_0_30px_rgba(255,42,109,0.15)]">
                            <a href={`/blog/${post.slug}/`}>
                                <div class="h-48 bg-gradient-to-br from-gray-900 to-black relative overflow-hidden">
                                    {post.data.heroImage && (
                                        <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" style={`background-image: url('${post.data.heroImage}');`}></div>
                                    )}
                                    {!post.data.heroImage && (
                                        <div class="absolute inset-0 bg-gray-800 flex items-center justify-center">
                                           <span class="text-gray-600 font-bold text-4xl">BLOG</span>
                                        </div>
                                    )}
                                    <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>
                                    <div class="absolute top-4 left-4 flex gap-2">
                                         <span class="px-2 py-1 text-[10px] font-bold uppercase tracking-wider bg-black/60 backdrop-blur-md border border-white/10 rounded text-white">
                                            {post.data.pubDate.toLocaleDateString('es-ES', { year: 'numeric', month: 'short', day: 'numeric' })}
                                        </span>
                                        <span class="px-2 py-1 text-[10px] font-bold uppercase tracking-wider bg-neon-pink/80 backdrop-blur-md border border-white/10 rounded text-white">
                                            {Math.ceil(post.body.split(/\s+/).length / 200)} min
                                        </span>
                                    </div>
                                </div>
                                
                                <div class="p-6 flex flex-col flex-grow">
                                    <h3 class="text-2xl font-bold font-heading mb-3 group-hover:text-neon-cyan transition-colors">
                                        {post.data.title}
                                    </h3>
                                    <p class="text-sm text-gray-400 mb-4 line-clamp-3 leading-relaxed flex-grow">
                                        {post.data.description}
                                    </p>
                                    <span class="text-neon-cyan text-sm font-bold flex items-center gap-2 mt-auto">
                                        LEER MÁS <span class="group-hover:translate-x-1 transition-transform">→</span>
                                    </span>
                                </div>
                            </a>
                        </article>
                    ))}
                </div>
            )}
        </section>


    </main>
</Layout>
