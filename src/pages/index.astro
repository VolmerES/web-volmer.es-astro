<script>
    const initChoiceModal = () => {
        const modal = document.getElementById('choice-modal') as HTMLDialogElement;
        const trigger = document.getElementById('hero-contact-trigger');
        const closeBtn = document.getElementById('close-choice-modal');
        const emailBtn = document.getElementById('choice-email-btn');

        if (!modal || !trigger || !closeBtn) return;

        trigger.addEventListener('click', () => {
             modal.showModal();
             document.body.style.overflow = 'hidden';
        });

        const closeModal = () => {
            modal.close();
            document.body.style.overflow = '';
        };

        closeBtn.addEventListener('click', closeModal);
        modal.addEventListener('click', (e) => {
            if (e.target === modal) closeModal();
        });
        
        // Handle Email choice: close this modal and open the email modal
        if (emailBtn) {
            emailBtn.addEventListener('click', () => {
                closeModal();
                // We use the class trigger logic we added to Header.astro, 
                // but since this button is dynamically handled, we might need a direct call.
                // However, easier approach: find any .open-contact-modal element and click it.
                // Or better: dispatch a custom event or just click the footer email link secretly.
                const footerEmail = document.querySelector('.open-contact-modal') as HTMLElement;
                if (footerEmail) footerEmail.click();
            });
        }
    };

    // Initialize on load
    document.addEventListener('astro:page-load', initChoiceModal);
    initChoiceModal();
</script>
