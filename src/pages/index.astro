                <!-- Background Image Low Opacity -->
                <div class="absolute inset-0 top-[-50%] bg-[url('/swipe-gallery-screen-1.png')] bg-cover bg-center opacity-10 group-hover:opacity-20 transition-opacity blur-sm"></div>
                <div class="absolute inset-0 bg-gradient-to-r from-[#111] via-[#111]/80 to-transparent"></div>

                <div class="relative z-10 p-5 flex items-center justify-between gap-6">
