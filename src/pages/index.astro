---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const services = [
  { 
    title: "Desarrollo Web", 
    desc: "Sitios rápidos y escalables.",
    icon: "M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    color: "neon-cyan"
  },
  { 
    title: "Apps Móviles", 
    desc: "iOS y Android con Flutter.",
    icon: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z",
     color: "neon-pink"
  },
  { 
    title: "Diseño UI/UX", 
    desc: "Interfaces intuitivas.",
    icon: "M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z",
     color: "yellow-400"
  },
  { 
    title: "Vuelos Drone", 
    desc: "Grabación 4K aérea.",
    icon: "M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z",
     color: "emerald-500"
  },
];
---

<Layout title="INICIO | Juan Bautista">


    <main class="relative pt-24 pb-16">
        <!-- Hero Section -->
        <section class="max-w-7xl mx-auto px-6 pt-4 min-h-[65vh] flex flex-col md:flex-row items-center justify-between gap-8">
            <!-- Left Content -->
            <div class="flex-1 flex flex-col items-start z-10">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-neon-cyan/30 bg-neon-cyan/5 text-neon-cyan text-[10px] font-bold tracking-wider mb-3 animate-pulse">
                    <span class="w-1.5 h-1.5 rounded-full bg-neon-cyan"></span>
                    AVAILABLE FOR HIRE
                </div>
                
                <h1 class="font-heading text-4xl md:text-6xl font-bold leading-tight mb-4">
                    BIENVENIDO A MI <br />
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-neon-cyan to-neon-pink">UNIVERSO DIGITAL.</span>
                </h1>
                
                <p class="text-base md:text-lg text-gray-400 max-w-xl mb-6 leading-relaxed">
                    Soy Juan Bautista (Volmer), un Ingeniero de Software especializado en crear aplicaciones web modernas, rápidas y estéticamente impactantes. Fusionando tecnología y arte.
                </p>
                
                <div class="flex flex-wrap gap-4 w-full sm:w-auto">
                    <a href="/portfolio" class="px-6 py-2.5 bg-neon-pink text-white text-sm font-bold rounded-lg hover:bg-pink-600 transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,42,109,0.4)] text-center flex items-center justify-center gap-2">
                        VER PROYECTOS
                    </a>
                    <a href="/Juan_Bautista_CV.pdf" download class="px-6 py-2.5 bg-white/10 border border-white/20 text-white text-sm font-bold rounded-lg hover:bg-white/20 hover:border-neon-cyan/50 hover:text-neon-cyan transition-all text-center flex items-center justify-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                        CV
                    </a>
                    <a href="mailto:juanbautista.dev@volmer.es" class="px-6 py-2.5 transparent border border-white/20 text-white text-sm font-bold rounded-lg hover:bg-white/10 transition-all text-center flex items-center justify-center">
                        HABLEMOS
                    </a>
                </div>

                 <!-- Tech Stack Preview -->
                <div class="mt-10 pt-6 border-t border-white/10 w-full">
                    <p class="text-[10px] text-gray-500 uppercase tracking-widest mb-4">Technologies I work with</p>
                    <div class="flex flex-wrap gap-x-4 gap-y-2 opacity-90 grayscale hover:grayscale-0 transition-all duration-500 text-sm">
                         <span class="text-[#02569B] font-bold hover:text-[#02569B] transition-colors cursor-default">Flutter</span>
                         <span class="text-[#0175C2] font-bold hover:text-[#0175C2] transition-colors cursor-default">Dart</span>
                         <span class="text-[#A8B9CC] font-bold hover:text-[#A8B9CC] transition-colors cursor-default">C</span>
                         <span class="text-[#00599C] font-bold hover:text-[#00599C] transition-colors cursor-default">C++</span>
                         <span class="text-[#3776AB] font-bold hover:text-[#3776AB] transition-colors cursor-default">Python</span>
                         <span class="text-[#21759B] font-bold hover:text-[#21759B] transition-colors cursor-default">WordPress</span>
                         <span class="text-[#F05032] font-bold hover:text-[#F05032] transition-colors cursor-default">Git</span>
                         <span class="text-[#2496ED] font-bold hover:text-[#2496ED] transition-colors cursor-default">Docker</span>
                         <span class="text-[#E34F26] font-bold hover:text-[#E34F26] transition-colors cursor-default">HTML</span>
                         <span class="text-[#1572B6] font-bold hover:text-[#1572B6] transition-colors cursor-default">CSS</span>
                         <span class="text-[#339933] font-bold hover:text-[#339933] transition-colors cursor-default">Node</span>
                         <span class="text-[#3178c6] font-bold hover:text-[#3178c6] transition-colors cursor-default">TypeScript</span>
                         <span class="text-[#ff5d01] font-bold hover:text-[#ff5d01] transition-colors cursor-default">Astro</span>
                    </div>
                </div>
            </div>

            <!-- Right Content: Profile & Code -->
            <div class="flex-1 w-full max-w-md relative group mt-8 md:mt-0">
                <!-- Glow Effect -->
                <div class="absolute -inset-1 bg-gradient-to-r from-neon-cyan to-neon-pink rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
                
                <div class="relative">
                    <!-- Profile Image Container -->
                    <div class="relative w-48 h-48 md:w-64 md:h-64 mx-auto rounded-full p-2 border border-white/10 bg-black/50 backdrop-blur-sm overflow-hidden mb-6 shadow-2xl">
                         <img src="/profile.png" alt="Juan Bautista Volmer" class="w-full h-full object-cover rounded-full filter grayscale-[30%] contrast-[110%] group-hover:filter-none transition-all duration-500" />
                    </div>

                    <!-- Cyberpunk Code Card -->
                    <div class="bg-[#0a0a0a]/90 border border-white/10 rounded-xl p-4 font-mono text-xs leading-relaxed shadow-xl backdrop-blur-md transform translate-y-[-10px] md:translate-x-8 hover:scale-[1.02] transition-transform duration-300">
                        <div class="flex gap-1.5 mb-3">
                            <div class="w-2.5 h-2.5 rounded-full bg-red-500"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-yellow-500"></div>
                            <div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>
                        </div>
                        <div class="text-gray-400">
                            <p><span class="text-purple-400">const</span> <span class="text-yellow-300">developer</span> = <span class="text-white">&lcub;</span></p>
                            <p class="pl-4">name: <span class="text-green-400">'Juan Bautista Volmer'</span>,</p>
                            <p class="pl-4">role: <span class="text-green-400">'Software Engineer'</span>,</p>
                            <p class="pl-4">skills: [<span class="text-green-400">'Web'</span>, <span class="text-green-400">'Mobile'</span>, <span class="text-green-400">'AI'</span>],</p>
                            <p class="pl-4">likes: [<span class="text-green-400">'Drones'</span>, <span class="text-green-400">'Coffee'</span>]</p>
                            <p><span class="text-white">&rcub;;</span></p>
                        </div>
                        <div class="mt-3 flex gap-4 text-lg">
                            <a href="https://github.com/VolmerES" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-white transition-colors">
                                <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
                            </a>
                            <a href="https://linkedin.com/in/jdelorme" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-blue-500 transition-colors">
                                <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.063 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 22.227.792 23 1.771 23h20.451C23.2 23 24 22.227 24 21.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Selected Work Preview -->
        <section class="max-w-7xl mx-auto px-6 mb-16">
            <div class="flex justify-between items-end mb-8">
                <div>
                    <h2 class="text-2xl md:text-3xl font-heading font-bold mb-2">Selected Work</h2>
                    <p class="text-sm text-gray-400">Algunos de mis proyectos recientes.</p>
                </div>
                <a href="/portfolio" class="hidden md:flex items-center gap-2 text-sm text-neon-cyan hover:text-white transition-colors">
                    Ver todos <span class="text-lg">→</span>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Project 1 -->
                <article class="group relative rounded-xl overflow-hidden bg-[#111] border border-white/10 hover:border-neon-pink/50 transition-all duration-500 hover:shadow-[0_0_20px_rgba(255,42,109,0.15)]">
                    <div class="h-40 bg-gradient-to-br from-gray-900 to-black relative overflow-hidden">
                        <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-60 group-hover:opacity-100" style="background-image: url('/fitgood-preview.png');"></div>
                        <div class="absolute inset-0 bg-gradient-to-t from-[#111] to-transparent"></div>
                    </div>
                    <div class="p-5 relative">
                        <span class="text-neon-pink text-[10px] font-bold tracking-widest uppercase mb-1 block">Web Design</span>
                        <h3 class="text-lg font-bold mb-2 group-hover:text-neon-cyan transition-colors">Fitgood</h3>
                        <p class="text-xs text-gray-400 mb-4">Plataforma de coaching personal y salud integral.</p>
                        <a href="#" class="inline-flex items-center gap-2 text-xs font-bold border-b border-neon-cyan pb-0.5 hover:text-neon-cyan transition-colors">
                            VIEW CASE
                        </a>
                    </div>
                </article>

                <!-- Project 2 -->
                <article class="group relative rounded-xl overflow-hidden bg-[#111] border border-white/10 hover:border-neon-cyan/50 transition-all duration-500 hover:shadow-[0_0_20px_rgba(5,217,232,0.15)]">
                    <div class="h-40 bg-gradient-to-br from-gray-900 to-black relative overflow-hidden">
                        <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-60 group-hover:opacity-100" style="background-image: url('/maingoo-preview.png');"></div>
                        <div class="absolute inset-0 bg-gradient-to-t from-[#111] to-transparent"></div>
                    </div>
                    <div class="p-5 relative">
                         <span class="text-neon-cyan text-[10px] font-bold tracking-widest uppercase mb-1 block">SaaS & AI</span>
                        <h3 class="text-lg font-bold mb-2 group-hover:text-neon-pink transition-colors">Maingoo</h3>
                        <p class="text-xs text-gray-400 mb-4">Gestión inteligente de restaurantes con IA.</p>
                        <a href="#" class="inline-flex items-center gap-2 text-xs font-bold border-b border-neon-pink pb-0.5 hover:text-neon-pink transition-colors">
                            VIEW CASE
                        </a>
                    </div>
                </article>
            </div>
             <div class="mt-6 text-center md:hidden">
                <a href="/portfolio" class="inline-flex items-center gap-2 text-sm text-neon-cyan hover:text-white transition-colors">
                    Ver todos <span class="text-lg">→</span>
                </a>
            </div>
        </section>

        <!-- Services Summary -->
        <section class="max-w-7xl mx-auto px-6 py-12 border-t border-white/5">
            <h2 class="text-xl md:text-2xl font-heading font-bold mb-8 text-white">LO QUE HAGO</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {services.map(service => (
                    <a href="/servicios" class="group p-4 rounded-xl bg-[#111] border border-white/5 hover:border-white/20 transition-all hover:-translate-y-1">
                        <div class={`w-10 h-10 mb-3 rounded-lg bg-${service.color}/10 flex items-center justify-center text-${service.color}`}>
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d={service.icon} />
                            </svg>
                        </div>
                        <h3 class="font-bold text-sm text-white mb-1 group-hover:text-neon-cyan transition-colors">{service.title}</h3>
                        <p class="text-xs text-gray-500 leading-relaxed">{service.desc}</p>
                    </a>
                ))}
            </div>
        </section>

        <!-- Swipe Gallery Compact Promo -->
        <section class="max-w-7xl mx-auto px-6 mb-16">
            <a href="/swipe-gallery-app" class="group block relative overflow-hidden rounded-xl bg-gradient-to-r from-gray-900 to-[#121212] border border-white/10 hover:border-neon-pink/50 transition-all shadow-lg hover:shadow-neon-pink/20">
                <!-- Background Image Low Opacity -->
                <div class="absolute inset-0 top-[-50%] bg-[url('/swipe-gallery-screen-1.png')] bg-cover bg-center opacity-10 group-hover:opacity-20 transition-opacity blur-sm"></div>
                <div class="absolute inset-0 bg-gradient-to-r from-[#111] via-[#111]/80 to-transparent"></div>

                <div class="relative z-10 p-5 flex items-center justify-between gap-6">
                    <div class="flex items-center gap-5">
                        <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-neon-pink to-purple-600 flex items-center justify-center shadow-lg shrink-0 group-hover:scale-110 transition-transform duration-500">
                             <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                            </svg>
                        </div>
                        <div>
                            <div class="flex items-center gap-2 mb-1">
                                <h3 class="font-heading font-bold text-white text-lg group-hover:text-neon-pink transition-colors">Swipe Gallery App</h3>
                                <span class="px-2 py-0.5 rounded text-[10px] font-bold bg-neon-pink/20 text-neon-pink border border-neon-pink/30">NUEVO</span>
                            </div>
                            <p class="text-sm text-gray-400 max-w-md">Organiza tu galería en minutos. Desliza para borrar.</p>
                        </div>
                    </div>
                    <div class="hidden md:flex items-center gap-2 pr-4">
                         <span class="text-xs font-bold text-white group-hover:underline decoration-neon-pink underline-offset-4">VER DETALLES</span>
                         <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-neon-pink group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </div>
            </a>
        </section>

        <!-- Latest Blog Posts -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
             <div class="flex justify-between items-end mb-8">
                <div>
                     <span class="text-neon-cyan text-xs font-bold tracking-widest uppercase mb-2 block">Blog</span>
                    <h2 class="text-2xl md:text-3xl font-heading font-bold">Últimas Publicaciones</h2>
                </div>
                <a href="/blog" class="hidden md:flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors">
                    Ver todo <span class="text-lg">→</span>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {posts.map((post) => (
                    <article class="group relative flex flex-col h-full rounded-xl overflow-hidden bg-[#111] border border-white/10 hover:border-neon-cyan/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(5,217,232,0.1)]">
                         <a href={`/blog/${post.slug}/`} class="flex flex-col h-full">
                            <div class="h-40 bg-gray-900 relative overflow-hidden">
                                {post.data.heroImage && (
                                    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" style={`background-image: url('${post.data.heroImage}');`}></div>
                                )}
                                <div class="absolute inset-0 bg-gradient-to-t from-[#111] to-transparent"></div>
                                <div class="absolute top-3 left-3">
                                     <span class="px-2 py-1 text-[10px] font-bold uppercase tracking-wider bg-black/60 backdrop-blur-md border border-white/10 rounded text-white">
                                        {post.data.pubDate.toLocaleDateString('es-ES', { month: 'short', day: 'numeric' })}
                                    </span>
                                </div>
                            </div>
                            <div class="p-5 flex flex-col flex-grow">
                                <h3 class="text-lg font-bold font-heading mb-2 leading-tight group-hover:text-neon-cyan transition-colors">
                                    {post.data.title}
                                </h3>
                                <p class="text-xs text-gray-500 line-clamp-2 mb-4">
                                    {post.data.description}
                                </p>
                                <span class="text-neon-cyan text-xs font-bold flex items-center gap-1 mt-auto">
                                    LEER ARTÍCULO <span class="group-hover:translate-x-1 transition-transform">→</span>
                                </span>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
             <div class="mt-8 text-center md:hidden">
                <a href="/blog" class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors">
                    Ver todas las publicaciones →
                </a>
            </div>
        </section>


    </main>
</Layout>
