---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const services = [
  { 
    title: "Desarrollo Web & Apps", 
    desc: "Sitios web, aplicaciones móviles y SaaS.",
    icon: "M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4",
    color: "neon-cyan"
  },
  { 
    title: "Vuelos Drone", 
    desc: "Grabación 4K aérea.",
    icon: "M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z",
     color: "emerald-500"
  },
];
---

<Layout title="INICIO | Juan Bautista">


    <main class="relative pt-24 pb-16">
        <!-- Hero Section -->
        <section class="max-w-7xl mx-auto px-6 pt-20 pb-10 min-h-[60vh] flex flex-col justify-center gap-16">
            <div class="flex flex-col md:flex-row items-center justify-between gap-10">
                <!-- Left Content -->
                <div class="flex-1 flex flex-col items-start z-10">


                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-neon-cyan/30 bg-neon-cyan/5 text-neon-cyan text-[10px] font-bold tracking-wider mb-6 animate-pulse">
                        <span class="w-1.5 h-1.5 rounded-full bg-neon-cyan"></span>
                        DISPONIBLE PARA PROYECTOS
                    </div>
                    
                    <h1 class="font-heading text-4xl md:text-6xl font-bold leading-tight mb-6">
                        BIENVENIDO A MI <br />
                        <span class="text-transparent bg-clip-text bg-gradient-to-r from-neon-cyan to-neon-pink">UNIVERSO DIGITAL.</span>
                    </h1>
                    
                    <div class="text-base text-gray-400 max-w-xl mb-8 space-y-3 leading-relaxed">
                        <p>
                            Empecé joven programando scripts y creando juegos sencillos en <span class="text-gray-300">Unity con C#</span>.
                        </p>
                        <p>
                            Hoy diseño y desarrollo productos digitales con una idea clara: <span class="text-white font-medium">aportar valor real a través de la tecnología.</span>
                        </p>
                    </div>
                    
                    <div class="flex flex-wrap gap-4 w-full sm:w-auto">
                        <a href="/portfolio" class="px-6 py-2.5 bg-neon-pink text-white text-sm font-bold rounded-lg hover:bg-pink-600 transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,42,109,0.4)] text-center flex items-center justify-center gap-2">
                            VER PORTAFOLIO
                        </a>
                        <a href="/Juan_Bautista_CV.pdf" download class="px-6 py-2.5 bg-white/10 border border-white/20 text-white text-sm font-bold rounded-lg hover:bg-white/20 hover:border-neon-cyan/50 hover:text-neon-cyan transition-all text-center flex items-center justify-center gap-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                            CV
                        </a>
                        <button id="hero-contact-trigger" class="px-6 py-2.5 transparent border border-white/20 text-white text-sm font-bold rounded-lg hover:bg-white/10 transition-all text-center flex items-center justify-center">
                            HABLEMOS
                        </button>
                    </div>


                    <!-- Trust Badges Grid -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mt-12 w-full">
                        
                        <!-- Card 1: 42 Madrid -->
                        <!-- Card 1: 42 Madrid -->
                        <a href="https://profile.intra.42.fr/users/jdelorme" target="_blank" rel="noopener noreferrer" class="p-5 rounded-2xl bg-white/5 border border-white/10 hover:border-neon-cyan/50 transition-all group/card cursor-pointer backdrop-blur-md">
                            <div class="flex items-center gap-3 mb-3">
                                <img src="https://upload.wikimedia.org/wikipedia/commons/8/8d/42_Logo.svg" alt="42 Logo" class="w-6 h-6 invert opacity-80 group-hover/card:opacity-100 transition-opacity" />
                                <h3 class="font-heading font-bold text-white text-lg group-hover/card:text-neon-cyan transition-colors">42 Madrid</h3>
                            </div>
                            <p class="text-xs text-gray-400 font-medium">Estudiante / Alumni</p>
                        </a>

                        <!-- Card 2: Maingoo -->
                        <!-- Card 2: Maingoo -->
                        <a href="https://maingoo.tech/" target="_blank" rel="noopener noreferrer" class="p-5 rounded-2xl bg-white/5 border border-white/10 hover:border-purple-500/50 transition-all group/card cursor-pointer backdrop-blur-md">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-6 h-6 rounded flex items-center justify-center relative">
                                    <img src="/maingoo-logo.png" alt="Maingoo Logo" class="w-full h-full object-contain filter group-hover/card:brightness-110 transition-all" />
                                </div>
                                <h3 class="font-heading font-bold text-white text-lg group-hover/card:text-purple-400 transition-colors">Maingoo</h3>
                            </div>
                            <p class="text-xs text-gray-400 font-medium">Front-end Developer</p>
                        </a>

                         <!-- Card 3: Freelance -->
                        <div class="p-5 rounded-2xl bg-white/5 border border-white/10 hover:border-neon-pink/50 transition-all group/card cursor-default backdrop-blur-md">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-6 h-6 rounded flex items-center justify-center bg-neon-pink/20 text-neon-pink group-hover/card:bg-neon-pink group-hover/card:text-white transition-all">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                    </svg>
                                </div>
                                <h3 class="font-heading font-bold text-white text-lg group-hover/card:text-neon-pink transition-colors">Freelance</h3>
                            </div>
                            <p class="text-xs text-gray-400 font-medium">Desarrollador Full Stack</p>
                        </div>

                        <!-- Card 4: Drone Pilot -->
                        <div class="p-5 rounded-2xl bg-white/5 border border-white/10 hover:border-yellow-400/50 transition-all group/card cursor-default backdrop-blur-md">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="w-6 h-6 rounded flex items-center justify-center bg-yellow-400/20 text-yellow-400 group-hover/card:bg-yellow-400 group-hover/card:text-white transition-all">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
                                    </svg>
                                </div>
                                <h3 class="font-heading font-bold text-white text-lg group-hover/card:text-yellow-400 transition-colors">Piloto Drones</h3>
                            </div>
                            <p class="text-xs text-gray-400 font-medium">Certificación A1/A3</p>
                        </div>

                    </div>
                </div>

                <!-- Right Content: Profile & Code -->
                <div class="flex-1 w-full max-w-md relative group mt-8 md:mt-0">
                    <!-- Glow Effect -->
                    <div class="absolute -inset-1 bg-gradient-to-r from-neon-cyan to-neon-pink rounded-full blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
                    
                    <div class="relative">
                        <!-- Profile Image Container -->
                        <div class="relative w-48 h-48 md:w-64 md:h-64 mx-auto rounded-full p-2 border border-white/10 bg-black/50 backdrop-blur-sm overflow-hidden mb-6 shadow-2xl">
                             <img src="/profile.png" alt="Juan Bautista Volmer" class="w-full h-full object-cover rounded-full filter grayscale-[30%] contrast-[110%] group-hover:filter-none transition-all duration-500" />
                        </div>

                        <!-- Cyberpunk Code Card -->
                        <div class="bg-[#0a0a0a]/90 border border-white/10 rounded-xl p-4 font-mono text-xs leading-relaxed shadow-xl backdrop-blur-md transform translate-y-[-10px] md:translate-x-8 hover:scale-[1.02] transition-transform duration-300">
                            <div class="flex gap-1.5 mb-3">
                                <div class="w-2.5 h-2.5 rounded-full bg-red-500"></div>
                                <div class="w-2.5 h-2.5 rounded-full bg-yellow-500"></div>
                                <div class="w-2.5 h-2.5 rounded-full bg-green-500"></div>
                            </div>
                            <div class="text-gray-400">
                                <p><span class="text-purple-400">const</span> <span class="text-yellow-300">developer</span> = <span class="text-white">&lcub;</span></p>
                                <p class="pl-4">name: <span class="text-green-400">'Juan Bautista Volmer'</span>,</p>
                                <p class="pl-4">role: <span class="text-green-400">'Software Engineer'</span>,</p>
                                <p class="pl-4">skills: [<span class="text-green-400">'Web'</span>, <span class="text-green-400">'Mobile'</span>, <span class="text-green-400">'AI'</span>],</p>
                                <p class="pl-4">likes: [<span class="text-green-400">'Drones'</span>, <span class="text-green-400">'Coffee'</span>]</p>
                                <p><span class="text-white">&rcub;;</span></p>
                            </div>
                            <div class="mt-3 flex gap-4 text-lg">
                                <a href="https://github.com/VolmerES" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-white transition-colors">
                                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"/></svg>
                                </a>
                                <a href="https://linkedin.com/in/jdelorme" target="_blank" rel="noopener noreferrer" class="text-gray-500 hover:text-blue-500 transition-colors">
                                    <svg class="w-5 h-5 fill-current" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.063 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 22.227.792 23 1.771 23h20.451C23.2 23 24 22.227 24 21.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tech Stack Preview -->
            <div class="pt-6 border-t border-white/5 w-full">
                <p class="text-[10px] text-gray-500 uppercase tracking-widest mb-4">Tecnologías que utilizo</p>
                <div class="flex flex-wrap gap-x-6 gap-y-3 opacity-80 grayscale hover:grayscale-0 transition-all duration-500 text-sm">
                     <span class="text-[#02569B] font-bold hover:text-[#02569B] transition-colors cursor-default">Flutter</span>
                     <span class="text-[#0175C2] font-bold hover:text-[#0175C2] transition-colors cursor-default">Dart</span>
                     <span class="text-[#A8B9CC] font-bold hover:text-[#A8B9CC] transition-colors cursor-default">C</span>
                     <span class="text-[#00599C] font-bold hover:text-[#00599C] transition-colors cursor-default">C++</span>
                     <span class="text-[#3776AB] font-bold hover:text-[#3776AB] transition-colors cursor-default">Python</span>
                     <span class="text-[#21759B] font-bold hover:text-[#21759B] transition-colors cursor-default">WordPress</span>
                     <span class="text-[#F05032] font-bold hover:text-[#F05032] transition-colors cursor-default">Git</span>
                     <span class="text-[#2496ED] font-bold hover:text-[#2496ED] transition-colors cursor-default">Docker</span>
                     <span class="text-[#E34F26] font-bold hover:text-[#E34F26] transition-colors cursor-default">HTML</span>
                     <span class="text-[#1572B6] font-bold hover:text-[#1572B6] transition-colors cursor-default">CSS</span>
                     <span class="text-[#339933] font-bold hover:text-[#339933] transition-colors cursor-default">Node</span>
                     <span class="text-[#3178c6] font-bold hover:text-[#3178c6] transition-colors cursor-default">TypeScript</span>
                     <span class="text-[#ff5d01] font-bold hover:text-[#ff5d01] transition-colors cursor-default">Astro</span>
                </div>
            </div>
        </section>



        <!-- Services Summary -->
        <section class="max-w-7xl mx-auto px-6 py-12 border-t border-white/5">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-xl md:text-2xl font-heading font-bold text-white">LO QUE HAGO</h2>
                <a href="/servicios" class="text-xs font-bold text-gray-500 hover:text-white transition-colors">VER SERVICIOS →</a>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                {services.map(service => (
                    <a href="/servicios" class="group p-4 rounded-xl bg-[#111] border border-white/5 hover:border-white/20 transition-all hover:-translate-y-1">
                        <div class={`w-10 h-10 mb-3 rounded-lg bg-${service.color}/10 flex items-center justify-center text-${service.color}`}>
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d={service.icon} />
                            </svg>
                        </div>
                        <h3 class="font-bold text-sm text-white mb-1 group-hover:text-neon-cyan transition-colors">{service.title}</h3>
                        <p class="text-xs text-gray-500 leading-relaxed">{service.desc}</p>
                    </a>
                ))}
            </div>
        </section>



        <!-- Compact Portfolio Section -->
        <section class="max-w-7xl mx-auto px-6 mb-16 border-t border-white/5 pt-8">
            <div class="flex items-center justify-between mb-6">
                 <h2 class="text-xl font-heading font-bold flex items-center gap-2">
                    <span class="w-2 h-2 rounded-full bg-neon-pink"></span>
                    Portafolio Destacado
                </h2>
                <a href="/portfolio" class="text-xs font-bold text-gray-500 hover:text-white transition-colors">VER TODO →</a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                 
                 <!-- Violeta Psicología -->
                 <a href="https://violetapsicologia.com" target="_blank" rel="noopener noreferrer" class="group flex flex-col bg-[#111] p-3 rounded-xl border border-white/5 hover:border-violet-500/50 transition-all hover:bg-white/5 h-full">
                    <div class="h-32 mb-3 rounded-lg bg-gray-900 overflow-hidden relative border border-white/10 shrink-0">
                         <div class="absolute inset-0 bg-[url('/violeta-preview.png')] bg-cover bg-top opacity-60 group-hover:scale-105 transition-transform duration-500"></div>
                         <div class="absolute inset-0 bg-gradient-to-t from-[#111] via-transparent to-transparent"></div>
                    </div>
                    <div class="flex flex-col flex-grow">
                        <h3 class="font-bold text-sm text-white group-hover:text-violet-400 transition-colors mb-1">Violeta Psicología</h3>
                        <p class="text-[10px] text-gray-500 uppercase tracking-wider mb-2">Web Corporativa</p>
                        <p class="text-xs text-gray-400 leading-relaxed mb-4">Diseño minimalista y sereno para consulta de psicología.</p>
                        <span class="mt-auto inline-block text-center py-1.5 px-3 rounded bg-violet-500/10 border border-violet-500/30 text-violet-300 text-[10px] font-bold tracking-wide group-hover:bg-violet-500 group-hover:text-white transition-all">
                            VER WEB
                        </span>
                    </div>
                 </a>

                 <!-- Swipe Gallery -->
                 <a href="/swipe-gallery-app" class="group flex flex-col bg-[#111] p-3 rounded-xl border border-white/5 hover:border-pink-500/50 transition-all hover:bg-white/5 h-full">
                    <div class="h-32 mb-3 rounded-lg bg-gray-900 overflow-hidden relative border border-white/10 shrink-0">
                         <div class="absolute inset-0 bg-[url('/swipe-gallery-banner-main.png')] bg-cover bg-center opacity-80 group-hover:scale-105 transition-transform duration-500"></div>
                         <div class="absolute inset-0 bg-black/40"></div>
                         <div class="absolute inset-0 flex items-center justify-center">
                            <img src="/swipe-gallery-logo.png" class="w-12 h-12 rounded-lg shadow-lg" alt="Swipe Gallery" />
                         </div>
                    </div>
                    <div class="flex flex-col flex-grow">
                        <h3 class="font-bold text-sm text-white group-hover:text-pink-500 transition-colors mb-1">Swipe Gallery</h3>
                        <p class="text-[10px] text-gray-500 uppercase tracking-wider mb-2">App Android</p>
                        <p class="text-xs text-gray-400 leading-relaxed mb-4">Organiza tu galería con gestos intuitivos. Tinder para fotos.</p>
                         <span class="mt-auto inline-block text-center py-1.5 px-3 rounded bg-pink-500/10 border border-pink-500/30 text-pink-300 text-[10px] font-bold tracking-wide group-hover:bg-pink-500 group-hover:text-white transition-all">
                            DESCARGAR APP
                        </span>
                    </div>
                 </a>

                 <!-- 42 Project (Cub3d) -->
                 <a href="https://github.com/VolmerES/cub3d" target="_blank" rel="noopener noreferrer" class="group flex flex-col bg-[#111] p-3 rounded-xl border border-white/5 hover:border-cyan-500/50 transition-all hover:bg-white/5 h-full">
                    <div class="h-32 mb-3 rounded-lg bg-gray-900 overflow-hidden relative border border-white/10 shrink-0">
                         <div class="absolute inset-0 bg-[url('/cub3d-preview.png')] bg-cover bg-center opacity-60 group-hover:scale-105 transition-transform duration-500"></div>
                         <div class="absolute inset-0 bg-gradient-to-t from-[#111] via-transparent to-transparent"></div>
                    </div>
                    <div class="flex flex-col flex-grow">
                        <h3 class="font-bold text-sm text-white group-hover:text-cyan-400 transition-colors mb-1">Cub3D</h3>
                        <p class="text-[10px] text-gray-500 uppercase tracking-wider mb-2">Proyecto 42</p>
                         <p class="text-xs text-gray-400 leading-relaxed mb-4">Motor de renderizado estilo Wolfenstein 3D en C.</p>
                         <span class="mt-auto inline-block text-center py-1.5 px-3 rounded bg-cyan-500/10 border border-cyan-500/30 text-cyan-300 text-[10px] font-bold tracking-wide group-hover:bg-cyan-500 group-hover:text-white transition-all">
                            VER PROYECTO
                        </span>
                    </div>
                 </a>

                 <!-- 2048 Game -->
                 <a href="https://2048.volmer.es/" target="_blank" rel="noopener noreferrer" class="group flex flex-col bg-[#111] p-3 rounded-xl border border-white/5 hover:border-yellow-400/50 transition-all hover:bg-white/5 h-full">
                    <div class="h-32 mb-3 rounded-lg bg-gray-900 overflow-hidden relative border border-white/10 shrink-0">
                         <div class="absolute inset-0 bg-[url('/2048-preview.png')] bg-cover bg-center opacity-70 group-hover:scale-105 transition-transform duration-500"></div>
                         <div class="absolute inset-0 bg-gradient-to-t from-[#111] via-transparent to-transparent"></div>
                    </div>
                    <div class="flex flex-col flex-grow">
                        <h3 class="font-bold text-sm text-white group-hover:text-yellow-400 transition-colors mb-1">2048 Game</h3>
                        <p class="text-[10px] text-gray-500 uppercase tracking-wider mb-2">Mini-Juego JS</p>
                        <p class="text-xs text-gray-400 leading-relaxed mb-4">Clásico juego de lógica creado con Vanilla JS.</p>
                        <span class="mt-auto inline-block text-center py-1.5 px-3 rounded bg-yellow-400/10 border border-yellow-400/30 text-yellow-300 text-[10px] font-bold tracking-wide group-hover:bg-yellow-400 group-hover:text-black transition-all">
                            PROBAR JUEGO
                        </span>
                    </div>
                 </a>

            </div>
        </section>

        <!-- Latest Blog Posts -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
             <div class="flex justify-between items-end mb-8">
                <div>
                     <span class="text-neon-cyan text-xs font-bold tracking-widest uppercase mb-2 block">Blog</span>
                    <h2 class="text-2xl md:text-3xl font-heading font-bold">Últimas Publicaciones</h2>
                </div>
                <a href="/blog" class="hidden md:flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors">
                    Ver todo <span class="text-lg">→</span>
                </a>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {posts.map((post) => (
                    <article class="group relative flex flex-col h-full rounded-xl overflow-hidden bg-[#111] border border-white/10 hover:border-neon-cyan/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(5,217,232,0.1)]">
                         <a href={`/blog/${post.slug}/`} class="flex flex-col h-full">
                            <div class="h-32 bg-gray-900 relative overflow-hidden">
                                {post.data.heroImage && (
                                    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" style={`background-image: url('${post.data.heroImage}');`}></div>
                                )}
                                <div class="absolute inset-0 bg-gradient-to-t from-[#111] to-transparent"></div>
                                <div class="absolute top-3 left-3">
                                     <span class="px-2 py-1 text-[10px] font-bold uppercase tracking-wider bg-black/60 backdrop-blur-md border border-white/10 rounded text-white">
                                        {post.data.pubDate.toLocaleDateString('es-ES', { month: 'short', day: 'numeric' })}
                                    </span>
                                </div>
                            </div>
                            <div class="p-4 flex flex-col flex-grow">
                                <h3 class="text-lg font-bold font-heading mb-2 leading-tight group-hover:text-neon-cyan transition-colors">
                                    {post.data.title}
                                </h3>
