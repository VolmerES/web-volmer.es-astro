            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {posts.map((post) => (
                    <article class="group relative flex flex-col h-full rounded-xl overflow-hidden bg-[#111] border border-white/10 hover:border-neon-cyan/50 transition-all duration-300 hover:shadow-[0_0_20px_rgba(5,217,232,0.1)]">
                         <a href={`/blog/${post.slug}/`} class="flex flex-col h-full">
                            <div class="h-40 bg-gray-900 relative overflow-hidden">
                                {post.data.heroImage && (
                                    <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" style={`background-image: url('${post.data.heroImage}');`}></div>
                                )}
                                <div class="absolute inset-0 bg-gradient-to-t from-[#111] to-transparent"></div>
                                <div class="absolute top-3 left-3">
                                     <span class="px-2 py-1 text-[10px] font-bold uppercase tracking-wider bg-black/60 backdrop-blur-md border border-white/10 rounded text-white">
                                        {post.data.pubDate.toLocaleDateString('es-ES', { month: 'short', day: 'numeric' })}
                                    </span>
                                </div>
                            </div>
                            <div class="p-5 flex flex-col flex-grow">
                                <h3 class="text-lg font-bold font-heading mb-2 leading-tight group-hover:text-neon-cyan transition-colors">
                                    {post.data.title}
                                </h3>
                                <p class="text-xs text-gray-500 line-clamp-2 mb-4">
                                    {post.data.description}
                                </p>
                                <span class="text-neon-cyan text-xs font-bold flex items-center gap-1 mt-auto">
                                    LEER ARTÍCULO <span class="group-hover:translate-x-1 transition-transform">→</span>
                                </span>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
             <div class="mt-8 text-center md:hidden">
                <a href="/blog" class="inline-flex items-center gap-2 text-sm text-gray-400 hover:text-white transition-colors">
                    Ver todas las publicaciones →
                </a>
            </div>
        </section>


    </main>
</Layout>
