---
import Layout from '../layouts/Layout.astro';

const webProjects = [
    {
        title: "Fitgood",
        description: "Plataforma de coaching personal y salud integral en Bélgica.",
        image: "/fitgood-preview.png",
        tags: ["Web Design", "Corporate", "International"],
        tech: ["Hostinger Builder"],
        link: "https://www.fitgood.be",
        color: "neon-cyan"
    },
    {
        title: "Psicología Violeta",
        description: "Espacio seguro para el bienestar emocional. Minimalismo cálido.",
        image: "/violeta-preview.png",
        tags: ["Branding", "Health"],
        tech: ["Astro", "Tailwind"],
        link: "https://violeta.volmer.es/",
        color: "emerald-500"
    },
    {
        title: "Maingoo",
        description: "Gestión inteligente de restaurantes impulsada por Inteligencia Artificial.",
        image: "/maingoo-logo.png",
        tags: ["SaaS", "AI", "Startup"],
        tech: ["Astro", "TypeScript", "Tailwind"],
        link: "https://maingoo.tech/",
        color: "neon-cyan"
    },
    {
        title: "Introspectia Psicología",
        description: "Sitio web para centro de psicología con diseño calmado y profesional.",
        image: "/introspectia-preview.png",
        tags: ["Psychology", "Clean UI"],
        tech: ["Wordpress", "Elementor"],
        link: "https://introspectiapsicologia.com/",
        color: "neon-pink"
    },
    {
        title: "Equidae Psicología",
        description: "Centro de psicología especializado en terapia asistida con caballos.",
        image: "/equidae-preview.png",
        tags: ["Therapy", "Nature UI"],
        tech: ["Wordpress", "Elementor"],
        link: "https://equidae.es/",
        color: "purple-500"
    },
    {
        title: "MesetAIR",
        description: "Experiencias de vuelo en globo con reserva online integrada.",
        image: "/mesetair-preview.png",
        tags: ["Booking", "Adventure"],
        tech: ["Wordpress", "Elementor"],
        link: "https://mesetair.com/",
        color: "yellow-400"
    }
];

const cProjects = [
     {
        title: "Cub3D",
        description: "Motor gráfico 3D utilizando Raycasting, inspirado en Wolfenstein 3D. Renderizado en tiempo real.",
        image: "/cub3d-preview.png",
        tags: ["Graphics", "Game Engine", "Algorithms"],
        tech: ["C", "MiniLibX", "Raycasting"],
        link: "https://github.com/VolmerES/cub3d",
        color: "cyan-400"
    },
    {
        title: "Minishell",
        description: "Replicación de un shell de Unix (Bash). Manejo de procesos, pipes, redirecciones y señales.",
        image: "/42-projects/minishell.png",
        tags: ["System", "Unix", "Shell"],
        tech: ["C", "Bash", "Processes"],
        link: "https://github.com/VolmerES/42_minishell", 
        color: "gray-400"
    },
    {
        title: "ft_irc",
        description: "Servidor de chat compatible con el protocolo IRC. Gestión de canales, usuarios y comandos.",
        image: "/42-projects/ft_irc.png",
        tags: ["Network", "Sockets", "Server"],
        tech: ["C++", "IRC", "TCP/IP"],
        link: "https://github.com/VolmerES/42_ft_irc",
        color: "green-400"
    },
    {
        title: "Inception",
        description: "Administración de sistemas con Docker. Orquestación de servicios (NGINX, MariaDB, WordPress).",
        image: "/42-projects/inception.png",
        tags: ["DevOps", "Docker", "SysAdmin"],
        tech: ["Docker", "Virtualization"],
        link: "https://github.com/VolmerES/42_inception",
        color: "blue-400"
    },
     {
        title: "Push Swap",
        description: "Algoritmo de ordenamiento de datos altamente optimizado utilizando dos pilas.",
        image: "/42-projects/push_swap.png",
        tags: ["Algorithms", "Optimization"],
        tech: ["C", "Sorting"],
        link: "https://github.com/VolmerES/42_push_swap",
        color: "orange-400"
    },
    {
        title: "Net Practice",
        description: "Ejercicios prácticos sobre redes, direccionamiento IP, enrutamiento y protocolos TCP/UDP.",
        image: "/42-projects/netpractice.png",
        tags: ["Network", "SysAdmin"],
        tech: ["Networking", "IP"],
        link: "#",
        color: "slate-400"
    }
];

const flutterProjects = [
    {
        title: "Swipe Gallery",
        description: "Organiza tu galería de fotos con gestos intuitivos. Desliza para borrar o guardar.",
        image: "/swipe-gallery-banner-main.png",
        tags: ["Mobile", "Productivity", "Android"],
        tech: ["Flutter", "Dart", "Provider"],
        link: "/swipe-gallery-app",
        color: "neon-pink"
    },
     {
        title: "Movie Swipe",
        description: "Decide qué ver en pareja. Desliza películas y haced 'match' para la noche de cine.",
        image: "/movie-swipe-preview.png",
        tags: ["Mobile", "Entertainment"],
        tech: ["Flutter", "Dart", "API"],
        link: "#",
        color: "yellow-400"
    }
];
---

<Layout title="PORTAFOLIO | Juan Bautista">
    <main class="relative pt-32 pb-20">
        <!-- Hero Section -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
            <div class="max-w-3xl">
                <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-neon-cyan/30 bg-neon-cyan/5 text-neon-cyan text-xs font-bold tracking-wider mb-6">
                    <span class="w-2 h-2 rounded-full bg-neon-cyan"></span>
                    WORK SHOWCASE
                </div>
                <h1 class="font-heading text-5xl md:text-7xl font-bold leading-tight mb-8">
                    MIS MEJORES <br/>
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-neon-cyan to-neon-pink">PROYECTOS</span>
                </h1>
                <p class="text-xl text-gray-400 leading-relaxed max-w-2xl">
                    Una colección de mis mejores trabajos, divididos por área de especialización. Desde webs corporativas hasta software de bajo nivel.
                </p>
            </div>
        </section>

        <!-- C PROJECTS (42) -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
            <div class="flex items-center gap-4 mb-8">
                <h2 class="text-2xl md:text-3xl font-heading font-bold text-white">Proyectos C (42 Madrid)</h2>
                 <div class="h-px flex-grow bg-gradient-to-r from-cyan-500/20 to-transparent"></div>
            </div>

             <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                {cProjects.slice(0, 3).map((project) => (
                    <article class="group relative flex flex-col h-full rounded-xl overflow-hidden bg-[#0a0a0a] border border-white/10 hover:border-cyan-500/30 transition-all duration-500 hover:shadow-[0_0_20px_rgba(6,182,212,0.1)]">
                        <!-- Image Container -->
                        <div class="h-40 overflow-hidden relative">
                             <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-70 group-hover:opacity-100 grayscale group-hover:grayscale-0" style={`background-image: url('${project.image}');`}></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>
                            
                            <div class="absolute top-3 left-3 flex flex-wrap gap-2">
                                <span class="px-2 py-0.5 text-[8px] font-bold uppercase tracking-wider bg-cyan-900/60 backdrop-blur-md border border-cyan-500/30 rounded text-cyan-100">
                                    42 NETWORK
                                </span>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-5 flex flex-col flex-grow relative z-10">
                            <h3 class="text-lg font-bold font-heading mb-1 group-hover:text-cyan-400 transition-colors">{project.title}</h3>
                            <div class="flex flex-wrap gap-2 mb-3">
                                {project.tech.map(t => (
                                    <span class="text-[10px] font-mono text-gray-500">#{t}</span>
                                ))}
                            </div>
                            <p class="text-xs text-gray-400 mb-4 line-clamp-3 leading-relaxed">
                                {project.description}
                            </p>
                            
                            <div class="mt-auto">
                                {project.link !== "#" ? (
                                    <a href={project.link} target="_blank" rel="noopener noreferrer" class="text-xs font-bold text-cyan-400 hover:text-white transition-colors flex items-center gap-1">
                                        VER CÓDIGO
                                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path></svg>
                                    </a>
                                ) : (
                                    <span class="text-xs font-bold text-gray-600 cursor-not-allowed">
                                        PRIVADO / OFFLINE
                                    </span>
                                )}
                            </div>
                        </div>
                    </article>
                ))}
            </div>

            <div class="text-center">
                <a href="/42" class="inline-flex items-center gap-2 px-6 py-2 rounded-full border border-cyan-500/30 text-cyan-400 hover:bg-cyan-500 hover:text-black transition-all duration-300 font-bold tracking-wider text-xs shadow-[0_0_15px_rgba(6,182,212,0.1)]">
                    VER TODOS LOS PROYECTOS 42
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
            </div>
        </section>

        <!-- WEB PORTFOLIO -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
             <div class="flex items-center gap-4 mb-8">
                <h2 class="text-2xl md:text-3xl font-heading font-bold text-white">Desarrollo Web</h2>
                <div class="h-px flex-grow bg-gradient-to-r from-white/20 to-transparent"></div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
                {webProjects.slice(0, 3).map((project) => (
                    <article class="group relative flex flex-col h-full rounded-xl overflow-hidden bg-[#0a0a0a] border border-white/10 hover:border-white/30 transition-all duration-500 hover:shadow-[0_0_20px_rgba(255,255,255,0.05)]">
                        <!-- Image Container -->
                        <div class="h-40 overflow-hidden relative">
                            <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110 opacity-80 group-hover:opacity-100" style={`background-image: url('${project.image}');`}></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] to-transparent"></div>
                            
                            <!-- Floating Tags -->
                            <div class="absolute top-3 left-3 flex flex-wrap gap-2">
                                {project.tags.slice(0, 2).map(tag => (
                                    <span class="px-2 py-0.5 text-[8px] font-bold uppercase tracking-wider bg-black/60 backdrop-blur-md border border-white/10 rounded text-white">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-5 flex flex-col flex-grow relative z-10">
                            <h3 class="text-lg font-bold font-heading mb-1 group-hover:text-neon-cyan transition-colors">{project.title}</h3>
                            <p class="text-xs text-gray-400 mb-4 line-clamp-2 leading-relaxed">
                                {project.description}
                            </p>
                            
                            <!-- Tech Stack -->
                            <div class="mt-auto pt-3 border-t border-white/5 flex justify-between items-center">
                                <div class="flex flex-wrap gap-2">
                                    {project.tech.map(t => (
                                        <span class="text-[10px] font-mono text-gray-500">#{t}</span>
                                    ))}
                                </div>
                                
                                <a href={project.link} target="_blank" rel="noopener noreferrer" class="text-xs font-bold text-white hover:text-neon-pink transition-colors flex items-center gap-1">
                                    VER
                                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                                </a>
                            </div>
                        </div>
                    </article>
                ))}
            </div>

            <div class="text-center">
                <a href="/portfolio/web" class="inline-flex items-center gap-2 px-6 py-2 rounded-full border border-white/20 hover:bg-white hover:text-black transition-all duration-300 font-bold tracking-wider text-xs">
                    VER TODOS LOS PROYECTOS WEB
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
            </div>
        </section>

        <!-- FLUTTER APPS -->
        <section class="max-w-7xl mx-auto px-6 mb-24">
             <div class="flex items-center gap-4 mb-8">
                <h2 class="text-2xl md:text-3xl font-heading font-bold text-white">Aplicaciones Móviles (Flutter)</h2>
                 <div class="h-px flex-grow bg-gradient-to-r from-pink-500/20 to-transparent"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                {flutterProjects.slice(0, 3).map((project) => (
                    <article class="group relative flex flex-col md:flex-row h-full rounded-xl overflow-hidden bg-[#0a0a0a] border border-white/10 hover:border-pink-500/30 transition-all duration-500 hover:shadow-[0_0_20px_rgba(236,72,153,0.1)]">
                        <!-- Image Container -->
                        <div class="h-48 md:h-auto md:w-2/5 overflow-hidden relative">
                            <div class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105 opacity-90 group-hover:opacity-100" style={`background-image: url('${project.image}');`}></div>
                            <div class="absolute inset-0 bg-gradient-to-t from-[#0a0a0a] via-transparent to-transparent md:bg-gradient-to-r md:from-transparent md:to-[#0a0a0a]"></div>
                        </div>

                        <!-- Content -->
                        <div class="p-5 flex flex-col justify-center md:w-3/5 relative z-10">
                            <h3 class="text-xl font-bold font-heading mb-2 group-hover:text-pink-500 transition-colors">{project.title}</h3>
                            <p class="text-xs text-gray-400 mb-4 leading-relaxed line-clamp-2">
                                {project.description}
                            </p>
                            
                            <!-- Tech Stack -->
                            <div class="mt-auto">
                                <div class="flex flex-wrap gap-2 mb-4">
                                    {project.tech.map(t => (
                                        <span class="text-[10px] font-mono text-gray-500">#{t}</span>
                                    ))}
                                </div>
                                
                                <a href={project.link} class="inline-flex items-center justify-center px-4 py-2 rounded-full bg-white text-black font-bold text-xs hover:bg-pink-500 hover:text-white transition-all duration-300">
                                    VER DETALLES
                                </a>
                            </div>
                        </div>
                    </article>
                ))}
            </div>

            <div class="text-center">
                <a href="/aplicaciones" class="inline-flex items-center gap-2 px-6 py-2 rounded-full border border-pink-500/30 text-pink-400 hover:bg-pink-500 hover:text-white transition-all duration-300 font-bold tracking-wider text-xs shadow-[0_0_15px_rgba(236,72,153,0.1)]">
                    VER TODAS LAS APPS
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                </a>
            </div>
        </section>

    </main>
</Layout>
