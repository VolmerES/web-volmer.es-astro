                </div>
            </div>
        </section>

         <!-- Final CTA -->
         <section class="py-24 relative overflow-hidden rounded-3xl mx-6 border border-white/10 bg-[#0a0a0a]">
            <!-- Decorative gradients -->
            <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-neon-pink/10 rounded-full blur-[100px] z-0"></div>
            <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-neon-cyan/10 rounded-full blur-[100px] z-0"></div>

            <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
                <h2 class="text-4xl md:text-6xl font-heading font-bold mb-8 text-white leading-tight">
