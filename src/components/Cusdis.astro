---
interface Props {
  appId?: string;
  host?: string;
  pageId: string;
  pageUrl: string;
  pageTitle: string;
}

const {
  appId = "YOUR_APP_ID_HERE",
  host = "https://cusdis.com",
  pageId,
  pageUrl,
  pageTitle,
} = Astro.props;
---

<div class="mt-20 relative group">
    <!-- Decorative gradient blur behind -->
    <div class="absolute -inset-1 bg-gradient-to-r from-neon-pink to-neon-cyan rounded-2xl blur opacity-20 group-hover:opacity-40 transition duration-1000 group-hover:duration-200"></div>

    <!-- Main Container -->
    <div class="relative bg-[#0a0a0a] border border-white/10 rounded-xl p-4 md:p-8 shadow-2xl">
        
        <!-- Header Section -->
        <div class="flex items-center justify-between mb-8 pb-4 border-b border-white/5">
            <div class="flex items-center gap-3">
                <div class="p-2 bg-white/5 rounded-lg text-neon-cyan">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                    </svg>
                </div>
                <div>
                    <h3 class="text-2xl font-bold font-heading text-white tracking-wide">
                        COMENTARIOS
                    </h3>
                    <p class="text-xs text-gray-500 uppercase tracking-widest mt-1">Comparte tu opinión</p>
                </div>
            </div>

            <!-- Optional: Status indicator or similar decorative element -->
            <div class="hidden sm:flex items-center gap-2">
                <span class="relative flex h-3 w-3">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-neon-cyan opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-3 w-3 bg-neon-cyan"></span>
                </span>
                <span class="text-xs text-neon-cyan font-mono">LIVE</span>
            </div>
        </div>
  
        <!-- Cusdis Widget Container -->
        <div class="w-full">
             <div id="cusdis_thread"
                data-host={host}
                data-app-id={appId}
                data-page-id={pageId}
                data-page-url={pageUrl}
                data-page-title={pageTitle}
                data-theme="dark"
                class="w-full min-h-[500px]"
            ></div>
        </div>
        
        <style>
            :global(#cusdis_thread iframe) {
                width: 100% !important;
                min-height: 500px !important; /* Force height if JS resize fails */
            }
        </style>

        <!-- Footer / Privacy Note -->
        <div class="mt-6 pt-4 border-t border-white/5 flex justify-center text-center">
            <p class="text-[10px] text-gray-600 font-mono">
                Powered by Open Source • Privacy Focused • No Tracking
            </p>
        </div>
    </div>

    <!-- Scripts -->
    <script is:inline defer src="https://cusdis.com/js/cusdis.es.js"></script>
    
    <script is:inline>
        window.addEventListener('load', () => {
            if (window.CUSDIS) {
                // Force dark theme slightly later to ensure iframe is ready 
                // though Cusdis usually handles data-theme="dark" attribute well.
                setTimeout(() => {
                    window.CUSDIS.setTheme('dark');
                }, 500);
            }
        });
    </script>
</div>

<style>
    /* Custom override if possible, though mostly relying on Cusdis internal dark mode */
    #cusdis_thread {
        width: 100%;
    }
</style>
