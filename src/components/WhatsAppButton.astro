<script>
    class WhatsAppWidget {
        widget: HTMLElement | null;
        toggleBtn: HTMLElement | null;
        chatWindow: HTMLElement | null;
        closeBtn: HTMLElement | null;
        input: HTMLInputElement | null;
        sendBtn: HTMLElement | null;
        isOpen: boolean;
        phoneNumber: string;

        constructor() {
            this.widget = document.getElementById('whatsapp-widget');
            this.toggleBtn = document.getElementById('whatsapp-toggle');
            this.chatWindow = document.getElementById('chat-window');
            this.closeBtn = document.getElementById('close-chat');
            this.input = document.getElementById('whatsapp-input') as HTMLInputElement;
            this.sendBtn = document.getElementById('whatsapp-send');
            this.isOpen = false;
            // IMPORTANT: Replace with your actual number in format 34600000000
            this.phoneNumber = '34123456789'; 

            if (this.widget) {
                this.init();
            }
        }

        init() {
            this.toggleBtn?.addEventListener('click', (e) => {
                e.stopPropagation();
                this.toggleChat();
            });
            
            this.closeBtn?.addEventListener('click', (e) => {
                e.stopPropagation();
                this.close();
            });
            
            this.sendBtn?.addEventListener('click', () => this.sendMessage());
            this.input?.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') this.sendMessage();
            });

            // Prevent closing when clicking inside chat
            this.chatWindow?.addEventListener('click', (e) => {
                e.stopPropagation();
            });

            // Close when clicking outside
            document.addEventListener('click', (e) => {
                if (this.isOpen && this.widget && !this.widget.contains(e.target as Node)) {
                    this.close();
                }
            });
        }

        open() {
            this.isOpen = true;
            this.chatWindow?.classList.remove('scale-0', 'opacity-0', 'translate-y-4');
            setTimeout(() => this.input?.focus(), 100);
        }

        close() {
            this.isOpen = false;
            this.chatWindow?.classList.add('scale-0', 'opacity-0', 'translate-y-4');
        }

        toggleChat() {
            if (this.isOpen) this.close();
            else this.open();
        }

        sendMessage() {
            const message = this.input?.value.trim();
            if (!message) return;

            const url = `https://wa.me/${this.phoneNumber}?text=${encodeURIComponent(message)}`;
            window.open(url, '_blank');
            
            // clear input and close
            if (this.input) this.input.value = '';
            this.close();
        }
    }

    // Init on page load and AFTER astro swap
    const initWidget = () => new WhatsAppWidget();
    document.addEventListener('astro:page-load', initWidget);
    // Fallback
    if (document.readyState === 'complete') {
        initWidget();
    } else {
        document.addEventListener('DOMContentLoaded', initWidget);
    }
</script>
