---
import reviews from '../../Reviews.json';

const gradients = [
    "from-blue-500 to-purple-600",
    "from-green-500 to-teal-600",
    "from-pink-500 to-red-500",
    "from-indigo-500 to-blue-500",
    "from-yellow-500 to-orange-500",
    "from-cyan-500 to-blue-500"
];

const getInitials = (name: string) => {
    return name
        .split(' ')
        .map(n => n[0])
        .slice(0, 2)
        .join('')
        .toUpperCase();
};
---

<section class="max-w-7xl mx-auto px-6 mb-12 md:mb-24 border-t border-white/5 pt-12">
    <div class="flex items-center justify-between mb-8">
        <h2 class="text-xl md:text-2xl font-heading font-bold text-white flex items-center gap-2">
            <span class="w-2 h-2 rounded-full bg-yellow-400"></span>
            Reseñas de Clientes
            <span class="flex text-yellow-500 text-sm ml-2">
                ★★★★★
            </span>
        </h2>
        <div class="flex gap-4 items-center">
            <a href="https://www.google.com/maps/place/Volmer+Tech/@23.1139177,-94.2923106,3z/data=!4m6!3m5!1s0x25d3edcd640fe0a3:0xd35547f3117ff6d0!8m2!3d23.1139177!4d-94.2923106!16s%2Fg%2F11y3n_0_0?entry=ttu" target="_blank" class="hidden md:block text-xs font-bold text-neon-cyan hover:underline">
                Ver en Google Maps ↗
            </a>
            <div class="flex gap-2">
                <!-- Navigation Arrows (Hidden on mobile, visible on desktop) -->
                <button id="scroll-left-reviews" class="hidden md:flex w-8 h-8 items-center justify-center rounded-full bg-white/5 border border-white/10 hover:bg-white/10 hover:border-neon-cyan/50 transition-all text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
                </button>
                <button id="scroll-right-reviews" class="hidden md:flex w-8 h-8 items-center justify-center rounded-full bg-white/5 border border-white/10 hover:bg-white/10 hover:border-neon-cyan/50 transition-all text-white">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Review Container -->
    <div id="reviews-container" class="flex overflow-x-auto snap-x snap-mandatory gap-5 pb-8 -mx-6 px-6 md:mx-0 md:px-0 md:pb-4 [mask-image:linear-gradient(to_right,transparent,black_5%,black_95%,transparent)] md:[mask-image:none]" style="scrollbar-width: none;">
        
        {reviews.map((review, index) => (
            <div class="min-w-[300px] w-[85%] md:w-[350px] snap-center flex flex-col justify-between p-6 rounded-2xl bg-[#111] border border-white/5 hover:border-neon-cyan/50 transition-all duration-300 relative group">
                 <!-- Google Logo Watermark -->
                 <svg class="absolute top-6 right-6 w-6 h-6 opacity-20 filter grayscale group-hover:grayscale-0 transition-all" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                    <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                    <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.21.81-.63z" fill="#FBBC05"/>
                    <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                 </svg>
    
                 <div>
                    <div class="flex items-center gap-1 mb-3">
                        <span class="text-yellow-400 text-lg">
                            {"★".repeat(review.stars)}
                        </span>
                    </div>
                    <p class="text-gray-300 text-sm leading-relaxed mb-6">
                        "{review.text}"
                    </p>
                 </div>
                 
                 <a href={review.reviewUrl} target="_blank" rel="noopener noreferrer" class="flex items-center gap-3 group/author">
                     <div class={`w-10 h-10 rounded-full bg-gradient-to-br ${gradients[index % gradients.length]} flex items-center justify-center text-white font-bold text-sm`}>
                        {getInitials(review.name)}
                     </div>
                     <div>
                         <h4 class="text-white font-bold text-sm group-hover/author:text-neon-cyan transition-colors">{review.name}</h4>
                         <p class="text-[10px] text-gray-500">Cliente verificado</p>
                     </div>
                 </a>
            </div>
        ))}

    </div>
    
     <div class="text-center mt-6 md:hidden">
        <a href="https://www.google.com/maps/place/Volmer+Tech/@23.1139177,-94.2923106,3z/data=!4m6!3m5!1s0x25d3edcd640fe0a3:0xd35547f3117ff6d0!8m2!3d23.1139177!4d-94.2923106!16s%2Fg%2F11y3n_0_0?entry=ttu" target="_blank" class="text-xs font-bold text-neon-cyan hover:underline">
            Ver en Google Maps ↗
        </a>
    </div>
</section>

<script>
    document.addEventListener('astro:page-load', () => {
        const container = document.getElementById('reviews-container');
        const leftBtn = document.getElementById('scroll-left-reviews');
        const rightBtn = document.getElementById('scroll-right-reviews');

        if (container && leftBtn && rightBtn) {
            
            leftBtn.addEventListener('click', () => {
                container.scrollBy({ left: -320, behavior: 'smooth' });
            });

            rightBtn.addEventListener('click', () => {
                container.scrollBy({ left: 320, behavior: 'smooth' });
            });
        }
    });
</script>
